<Application x:Class="OMPS.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OMPS"
             xmlns:helpers="clr-namespace:OMPS"
             xmlns:viewModel="clr-namespace:OMPS.viewModel"
             xmlns:pages="clr-namespace:OMPS.Pages"
             xmlns:windows="clr-namespace:OMPS.Windows"
             StartupUri="windows/MainWindow.xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             ThemeMode="Dark">
            
             <!---->
    <Application.Resources>
        <ResourceDictionary>
            <!--
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/ClassicControlStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            -->


            <ResourceDictionary.MergedDictionaries>

                <!--
                <ResourceDictionary Source="Resources/DataGrid_Main.xaml" />
                <ResourceDictionary Source="Resources/DataGrid_SidePnl.xaml" />
                <ResourceDictionary Source="Resources/ClassicDarkStyles.xaml" />
                -->

                <materialDesign:CustomColorTheme BaseTheme="Dark" PrimaryColor="DodgerBlue" SecondaryColor="MediumPurple"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />

                <!--
                <ResourceDictionary Source="pack://application:,,,/PresentationFramework.Fluent;component/Themes/Fluent.xaml" />

                -->
            </ResourceDictionary.MergedDictionaries>


            <ObjectDataProvider x:Key="IsDarkTheme"
                        MethodName="CurrentThemeIsDark"
                        ObjectType="{x:Type helpers:Ext}">
            </ObjectDataProvider>
            
            <BitmapImage x:Key="DefaultButtonImage" UriSource="pack://application:,,,/OMPS;component/Images/Save.png"/>
            <BitmapImage x:Key="MouseOverButtonImage" UriSource="pack://application:,,,/OMPS;component/Images/Save-hover.png"/>
            <BitmapImage x:Key="MouseDownButtonImage" UriSource="pack://application:,,,/OMPS;component/Images/Save-down.png"/>

            <!--
            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                <Setter Property="Foreground" 
                Value="{Binding Foreground, 
                       RelativeSource={RelativeSource AncestorType=FrameworkElement},
                       FallbackValue=Black}"/>
            </Style>
            -->

            <Style x:Key="SaveBtn" TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Image x:Name="ButtonImage" Source="{StaticResource DefaultButtonImage}"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonImage" Property="Source" Value="{StaticResource MouseOverButtonImage}"/>
                                </Trigger>
                                <Trigger Property="IsMouseCaptured" Value="True">
                                    <Setter TargetName="ButtonImage" Property="Source" Value="{StaticResource MouseDownButtonImage}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
