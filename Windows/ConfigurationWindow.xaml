<Window x:Class="OMPS.Windows.ConfigurationWindow" x:Name="ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OMPS"
        xmlns:Components="clr-namespace:OMPS.Components"
        xmlns:pages="clr-namespace:OMPS.Pages"
        xmlns:viewModel="clr-namespace:OMPS.ViewModels"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        FontSize="{Binding MainViewModel.FontSize_Base}" FontWeight="Normal"
        Style="{StaticResource MaterialDesignWindow}" ResizeMode="NoResize"
        Title="ConfigurationWindow" Height="300" Width="450" Opacity="1.0"
        WindowStyle="None" WindowStartupLocation="CenterOwner" ShowInTaskbar="False"
        PreviewKeyDown="ConfigWindow_PreviewKeyDown">
    <Window.CacheMode>
        <BitmapCache RenderAtScale="1.5" EnableClearType="True" SnapsToDevicePixels="True"/>
    </Window.CacheMode>
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" NonClientFrameEdges="None" ResizeBorderThickness="0" CornerRadius="2"/>
    </WindowChrome.WindowChrome>
    <Border CornerRadius="2" Background="#292929" BorderBrush="{StaticResource MaterialDesign.Brush.Primary}" BorderThickness="1">
        <StackPanel DataContext="{Binding ElementName=ConfigWindow}">
            <Grid VerticalAlignment="Stretch" Height="32" Margin="4 4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="64"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="64"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="Txtblk_Title" Grid.Column="1" FontSize="20" HorizontalAlignment="Stretch" VerticalAlignment="Center" TextAlignment="Center" Text="Configuration" FontWeight="DemiBold"/>
                <Button x:Name="Btn_CloseConfigWin" Grid.Column="2" HorizontalAlignment="Right" Width="Auto" Height="Auto"
                Padding="0" Foreground="IndianRed" Style="{StaticResource MaterialDesignFlatButton}" VerticalAlignment="Center"
                Click="Btn_CloseConfigWin_Click">
                    <materialDesign:PackIcon Kind="ExitToApp" Height="20" Width="20"/>
                </Button>
            </Grid>
            <StackPanel DataContext="{Binding ElementName=ConfigWindow}" Margin="10">
                <GroupBox Header="General">
                    <GroupBox.Style>
                        <Style TargetType="GroupBox" BasedOn="{StaticResource MaterialDesignHeaderedContentControl}">
                            <Setter Property="Margin" Value="0 2"/>
                            <Setter Property="BorderBrush" Value="{StaticResource MaterialDesign.Brush.Foreground}"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="HeaderTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <Border Height="32" Padding="4">
                                            <TextBlock Text="{Binding}" FontWeight="Medium" VerticalAlignment="Center" TextAlignment="Left"/>
                                        </Border>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupBox.Style>
                    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <StackPanel x:Name="SPnl_FontSize" VerticalAlignment="Stretch" Margin="8 8">
                            <TextBlock FontSize="{Binding MainViewModel.FontSize_Base}" Margin="0 0 12 0" VerticalAlignment="Center" HorizontalAlignment="Left" Text="Font Size: "/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Width="45" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Right"
                                           Text="{Binding MainViewModel.FontSize_Base}" Margin="12 0 0 0"/>
                                <TextBlock VerticalAlignment="Center" Text="pt" Margin="0 0 12 0"/>
                                <Slider HorizontalAlignment="Left" Minimum="{Binding MainViewModel.FontSize_MIN}" Maximum="{Binding MainViewModel.FontSize_MAX}" TickFrequency="0.25" Width="150" Height="20"
                                        Value="{Binding MainViewModel.FontSize_Base}"
                                        Style="{StaticResource MaterialDesign3.MaterialDesignDiscreteHorizontalSlider}"
                                        materialDesign:SliderAssist.OnlyShowFocusVisualWhileDragging="True"/>
                                <Button x:Name="Btn_FontSizeDown" Height="24" Width="24" Style="{StaticResource MaterialDesignFlatButton}" Foreground="{StaticResource MaterialDesign.Brush.Foreground}" Margin="4 0 0 0" Padding="3 3" IsEnabled="{Binding MainViewModel.FontSize_CanBeSmaller, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" HorizontalAlignment="Stretch" Click="Btn_FontSizeDown_Click">
                                    <materialDesign:PackIcon Height="20" Width="22" Kind="FormatFontSizeDecrease" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Button>
                                <Button x:Name="Btn_FontSizeUp" Height="24" Width="24" Style="{StaticResource MaterialDesignFlatButton}" Foreground="{StaticResource MaterialDesign.Brush.Foreground}" Margin="4 0 0 0" Padding="3 3" IsEnabled="{Binding MainViewModel.FontSize_CanBeLarger, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" HorizontalAlignment="Stretch" Click="Btn_FontSizeUp_Click">
                                    <materialDesign:PackIcon Height="20" Width="22" Kind="FormatFontSizeIncrease" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel x:Name="SPnl_DataGridLines" VerticalAlignment="Stretch" Margin="8 8">
                            <TextBlock FontSize="{Binding MainViewModel.FontSize_Base}" Margin="0 0 12 0" VerticalAlignment="Center" HorizontalAlignment="Left" Text="Data Grid, Grid Lines: "/>
                            <StackPanel Orientation="Horizontal">
                                <ComboBox x:Name="Cmbx_GridLines" Width="Auto" FontSize="{Binding MainViewModel.FontSize_Base}" Margin="12 2 0 2" SelectionChanged="Cmbx_GridLines_SelectionChanged"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel x:Name="SPnl_Timezone" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="8 8">
                            <TextBlock FontSize="{Binding MainViewModel.FontSize_Base}" Margin="0 0 12 0" VerticalAlignment="Center" HorizontalAlignment="Left" Text="Time Zone: "/>
                            <ComboBox x:Name="Cmbx_Tiemzones" Width="Auto" FontSize="{Binding MainViewModel.FontSize_Base}" Margin="12 2 0 2" SelectionChanged="Cmbx_Tiemzones_SelectionChanged"/>
                        </StackPanel>
                    </StackPanel>
                    
                </GroupBox>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
