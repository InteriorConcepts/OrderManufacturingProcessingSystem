<Window x:Class="OMPS.Windows.Chat" x:Name="ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OMPS.Windows"
        xmlns:Components="clr-namespace:OMPS.Components"
        xmlns:pages="clr-namespace:OMPS.Pages"
        xmlns:viewModel="clr-namespace:OMPS.viewModel"
        xmlns:Ext="clr-namespace:OMPS"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.VirtualizationMode="Recycling"
        mc:Ignorable="d" Background="#111" Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
        Style="{StaticResource MaterialDesignWindow}"
        Title="Chat" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListBox Grid.Column="0" Grid.Row="0" BorderBrush="#333" BorderThickness="1">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" TextWrapping="Wrap" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        <ListBox Grid.Column="1" Grid.Row="0" ItemsSource="{Binding Messages, ElementName=ChatWindow}"
                 BorderBrush="#333" BorderThickness="1"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 AlternationCount="1" Background="#222">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" TextWrapping="Wrap" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBox Grid.Column="1" Grid.Row="1" Style="{StaticResource MaterialDesignOutlinedTextBox}" Padding="10 2"
                 materialDesign:TextFieldAssist.TextFieldCornerRadius="1" BorderBrush="#333" BorderThickness="1" PreviewKeyDown="TextBox_PreviewKeyDown"/>
        <TextBlock Grid.Column="1" Grid.Row="2" x:Name="Txtblk_Status" Text="Test123" Height="18"/>
    </Grid>
</Window>
