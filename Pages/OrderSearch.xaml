<Page x:Class="OMPS.Pages.OrderSearch"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OMPS"
      xmlns:Components="clr-namespace:OMPS.Components" xmlns:pages="clr-namespace:OMPS.Pages"
      x:Name="Page_OrderSearch"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1025"
      Title="JobSearch"
      DataContext="{Binding ElementName=Page_OrderSearch}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="spnl_TopBar" Orientation="Horizontal" Grid.Row="0">
            
        </StackPanel>
        <DataGrid Grid.Row="1" x:Name="datagrid_orders" IsReadOnly="True" IsTextSearchEnabled="True" ItemsSource="{Binding ColorSetInfos}" AutoGeneratingColumn="DataGrid_AutoGeneratingColumn" EnableColumnVirtualization="True" MouseDoubleClick="datagrid_orders_MouseDoubleClick">
            
        </DataGrid>
    </Grid>
</Page>
