<UserControl x:Class="OMPS.Pages.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OMPS"
             xmlns:Components="clr-namespace:OMPS.Components" xmlns:pages="clr-namespace:OMPS.Pages"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             x:Name="Page_Home" VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.VirtualizationMode="Recycling"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1025"
             DataContext="{Binding ElementName=Page_Home}"
             FontSize="{Binding DataGridFontSize, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=12}">
    <UserControl.Resources>
        <local:ScalingConverter x:Key="ScalingConverter1"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisConverter1"/>
    </UserControl.Resources>
    <UserControl.Background>
        <LinearGradientBrush EndPoint="0,0" StartPoint="1,1">
            <GradientStop Color="#FF292929" Offset="1"/>
            <GradientStop Color="#FF111111" Offset="0"/>
        </LinearGradientBrush>
    </UserControl.Background>
    <ScrollViewer>
        <WrapPanel Orientation="Horizontal" >
            <WrapPanel.Background>
                <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                    <GradientStop Color="#FF343434" Offset="0"/>
                    <GradientStop Color="#FF151515" Offset="1"/>
                    <GradientStop Color="#FF1F1F1F"/>
                </LinearGradientBrush>
            </WrapPanel.Background>
            <Border Width="262" Height="300" Margin="12" CornerRadius="4" Background="#292929"
                    BorderBrush="#556a97" BorderThickness="0" Padding="6 4">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="2" Color="#aaa" Direction="-45" Opacity="1" ShadowDepth="2" />
                </Border.Effect>
                <materialDesign:ColorZone Foreground="#ffe9c5" Background="Transparent" FontFamily="Lucida Sans Typewriter" VerticalAlignment="Stretch">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" FontSize="{Binding FontSize_DataGrid, FallbackValue=20, Converter={StaticResource ScalingConverter1}, ConverterParameter=1.5}"
                               FontWeight="Bold" Padding="0" Foreground="#d7d7d7">
                            <Label.Content>
                                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                    <materialDesign:PackIcon Kind="PaperAdd"/>
                                    <TextBlock Text="New Orders" VerticalAlignment="Top" TextAlignment="Left"/>
                                    <Rectangle Height="3" Fill="#0a89ff">
                                        <Rectangle.OpacityMask>
                                            <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                                <GradientStop Color="Black"/>
                                                <GradientStop Color="Transparent" Offset="5"/>
                                            </LinearGradientBrush>
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </StackPanel>
                            </Label.Content>
                        </Label>
                        <DataGrid x:Name="DataGrid_NewOrders" Grid.Row="1" IsReadOnly="True"
                                  FontSize="{Binding DataGridFontSize, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=12}"
                                  Background="Transparent" HeadersVisibility="Column" SelectionMode="Single" SnapsToDevicePixels="False"
                                  ItemsSource="{Binding NewOrders, UpdateSourceTrigger=PropertyChanged}" CanUserResizeRows="False" GridLinesVisibility="None">
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                                    <Setter Property="Height" Value="Auto"/>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                                    <Setter Property="Padding" Value="16 0"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="FontSize" Value="{Binding DataGridFontSize, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=8}"/>
                                </Style>
                            </DataGrid.CellStyle>
                        </DataGrid>

                    </Grid>
                </materialDesign:ColorZone>
            </Border>
            <Border Width="265" Height="300" Margin="12" CornerRadius="4" Background="#292929"
                    BorderBrush="#556a97" BorderThickness="0" Padding="6 4">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="2" Color="#aaa" Direction="-45" Opacity="1" ShadowDepth="2" />
                </Border.Effect>
                <materialDesign:ColorZone Foreground="#ffe9c5" Background="Transparent" FontFamily="Lucida Sans Typewriter" VerticalAlignment="Stretch">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" FontSize="{Binding FontSize_DataGrid, FallbackValue=20, Converter={StaticResource ScalingConverter1}, ConverterParameter=1.5}"
                               FontWeight="Bold" Padding="0 0 0 8" Foreground="#d7d7d7 ">
                            <Label.Content>
                                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                    <materialDesign:PackIcon Kind="Wrench"/>
                                    <TextBlock Text="Eng Working" VerticalAlignment="Top" TextAlignment="Left"/>
                                    <Rectangle Height="3" Fill="#0a89ff">
                                        <Rectangle.OpacityMask>
                                            <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                                <GradientStop Color="Black"/>
                                                <GradientStop Color="Transparent" Offset="5"/>
                                            </LinearGradientBrush>
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </StackPanel>
                            </Label.Content>
                        </Label>
                        <DataGrid x:Name="DataGrid_EngFolders" Grid.Row="1" IsReadOnly="True"
                                  FontSize="{Binding DataGridFontSize, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=12}"
                                  Background="Transparent" HeadersVisibility="Column" SelectionMode="Single" SnapsToDevicePixels="False"
                                  ItemsSource="{Binding EngWorking, UpdateSourceTrigger=PropertyChanged}" CanUserResizeRows="False" GridLinesVisibility="None">
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                                    <Setter Property="Height" Value="Auto"/>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                                    <Setter Property="Padding" Value="16 0"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="FontSize" Value="{Binding DataGridFontSize, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=8}"/>
                                </Style>
                            </DataGrid.CellStyle>
                        </DataGrid>
                    </Grid>
                </materialDesign:ColorZone>
            </Border>
            <Border Width="262" Height="300" Margin="12" CornerRadius="4" Background="#292929"
                    BorderBrush="#556a97" BorderThickness="0" Padding="6 4">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="2" Color="#aaa" Direction="-45" Opacity="1" ShadowDepth="2" />
                </Border.Effect>
                <materialDesign:ColorZone Foreground="#ffe9c5" Background="Transparent" FontFamily="Lucida Sans Typewriter" VerticalAlignment="Stretch">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" FontSize="{Binding FontSize_DataGrid, FallbackValue=20, Converter={StaticResource ScalingConverter1}, ConverterParameter=1.5}"
                               FontWeight="Bold" Padding="0 0 0 8" Foreground="#d7d7d7">
                            <Label.Content>
                                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                    <materialDesign:PackIcon Kind="ZipBox"/>
                                    <TextBlock Text="Eng Archive" VerticalAlignment="Top" TextAlignment="Left"/>
                                    <Rectangle Height="3" Fill="#0a89ff">
                                        <Rectangle.OpacityMask>
                                            <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                                <GradientStop Color="Black"/>
                                                <GradientStop Color="Transparent" Offset="5"/>
                                            </LinearGradientBrush>
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </StackPanel>
                            </Label.Content>
                        </Label>
                        <DataGrid x:Name="DataGrid_EngArchive" Grid.Row="1" IsReadOnly="True"
                                  FontSize="{Binding DataGridFontSize, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=12}"
                                  Background="Transparent" HeadersVisibility="Column" SelectionMode="Single" SnapsToDevicePixels="False"
                                  ItemsSource="{Binding EngArchive, UpdateSourceTrigger=PropertyChanged}"
                                  CanUserResizeRows="False" GridLinesVisibility="None"
                                  PreviewKeyDown="DataGrid_EngArchive_PreviewKeyDown"
                                  MouseDoubleClick="DataGrid_EngArchive_MouseDoubleClick">
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                                    <Setter Property="Height" Value="Auto"/>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                                    <Setter Property="Padding" Value="16 0"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="FontSize" Value="{Binding DataGridFontSize, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=8}"/>
                                </Style>
                            </DataGrid.CellStyle>
                        </DataGrid>
                    </Grid>
                </materialDesign:ColorZone>
            </Border>
            <Border Width="262" Height="300" Margin="12" CornerRadius="4" Background="#292929"
                    BorderBrush="#556a97" BorderThickness="0" Padding="6 4">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="2" Color="#aaa" Direction="-45" Opacity="1" ShadowDepth="2" />
                </Border.Effect>
                <materialDesign:ColorZone Foreground="#ffe9c5" Background="Transparent" FontFamily="Lucida Sans Typewriter" VerticalAlignment="Stretch">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" FontSize="{Binding FontSize_DataGrid, FallbackValue=20, Converter={StaticResource ScalingConverter1}, ConverterParameter=1.5}"
                               FontWeight="Bold" Padding="0 0 0 8" Foreground="#d7d7d7">
                            <Label.Content>
                                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                    <materialDesign:PackIcon Kind="SawBlade"/>
                                    <TextBlock Text="CNC Working" VerticalAlignment="Top" TextAlignment="Left"/>
                                    <Rectangle Height="3" Fill="#0a89ff">
                                        <Rectangle.OpacityMask>
                                            <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                                <GradientStop Color="Black"/>
                                                <GradientStop Color="Transparent" Offset="5"/>
                                            </LinearGradientBrush>
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </StackPanel>
                            </Label.Content>
                        </Label>
                        <DataGrid x:Name="DataGrid_CncFolders" Grid.Row="1" IsReadOnly="True"
                                  FontSize="{Binding DataGridFontSize, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=12}"
                                  Background="Transparent" HeadersVisibility="None" SelectionMode="Single" SnapsToDevicePixels="False"
                                  ItemsSource="{Binding CncEntries, UpdateSourceTrigger=PropertyChanged}" CanUserResizeRows="False" GridLinesVisibility="None">
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                                    <Setter Property="Height" Value="Auto"/>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                                    <Setter Property="Padding" Value="16 0"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="FontSize" Value="{Binding DataGridFontSize, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=8}"/>
                                </Style>
                            </DataGrid.CellStyle>
                        </DataGrid>
                    </Grid>
                </materialDesign:ColorZone>
            </Border>
        </WrapPanel>
    </ScrollViewer>
    
</UserControl>
