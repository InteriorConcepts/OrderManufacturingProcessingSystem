<UserControl x:Class="OMPS.Pages.EngOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OMPS"
      xmlns:conv="clr-namespace:OMPS.Converters"
      xmlns:Components="clr-namespace:OMPS.Components"
      xmlns:pages="clr-namespace:OMPS.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      x:Name="Page_EngOrder" VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.VirtualizationMode="Recycling"
      mc:Ignorable="d" UseLayoutRounding="False"
      d:DataContext="{d:DesignInstance Type=pages:EngOrder, IsDesignTimeCreatable=True}"
      d:DesignHeight="1000" d:DesignWidth="1025"
      PreviewKeyDown="Page_EngOrder_PreviewKeyDown"
      FontSize="{Binding MainViewModel.FontSize_H4, FallbackValue=12}"
      >

    <UserControl.Resources>
        <CollectionViewSource x:Key="MfgItemsViewSource" x:Name="MfgItemsViewSource" Source="{Binding MfgItemLines}" Filter="MfgItemsViewSource_Filter"/>

        <Style x:Key="LabelWithIndicator" TargetType="Label">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Label">
                        <Border Background="Transparent" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                TextElement.Foreground="{StaticResource MaterialDesign.Brush.Foreground}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="{Binding MainViewModel.FontSize_H7, FallbackValue=8}"/>
                                    <ColumnDefinition Width="{Binding MainViewModel.FontSize_H5, FallbackValue=10}"/>
                                </Grid.ColumnDefinitions>

                                <!-- Content -->
                                <ContentPresenter Grid.Column="0"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                  RecognizesAccessKey="True"/>

                                <!-- Indicator Dot -->
                                <materialDesign:PackIcon Grid.Column="1" Panel.ZIndex="-2"
                                               Foreground="{TemplateBinding Background}" 
                                               Width="{Binding MainViewModel.FontSize_H7, FallbackValue=8}" 
                                               Height="{Binding MainViewModel.FontSize_H7, FallbackValue=8}" 
                                               Kind="Circle" 
                                               Margin="0,0,0,0"
                                               VerticalAlignment="Center">
                                </materialDesign:PackIcon>

                                <!-- Single Revert Button -->
                                <Button Grid.Column="2" Padding="0" Margin="0" VerticalAlignment="Center"
                                        BorderThickness="0" Click="Btn_RevertItemLinePropEdit_Click"
                                        Visibility="{TemplateBinding Tag, Converter={conv:NullToVisibilityConverter}}"
                                        IsEnabled="{TemplateBinding Tag, Converter={conv:NullToBooleanConverter}}"
                                        Style="{StaticResource MaterialDesignToolForegroundButton}">
                                    <materialDesign:PackIcon Kind="UndoVariant" Foreground="#FFC38966"
                                                             Width="{Binding MainViewModel.FontSize_H5, FallbackValue=10}"
                                                             Height="{Binding MainViewModel.FontSize_H5, FallbackValue=10}"/>
                                </Button>
                            </Grid>
                        </Border>
                        <ControlTemplate.Resources>
                            <!-- Force inheritance for all TextBlocks within this template -->
                            <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                <Setter Property="Foreground" 
                                        Value="{StaticResource MaterialDesign.Brush.Foreground}"/>
                            </Style>
                        </ControlTemplate.Resources>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Tag" Value="none">
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="Background" Value="Transparent"/>
                </Trigger>
                <Trigger Property="Tag" Value="error">
                    <Setter Property="BorderBrush" Value="#d44"/>
                    <Setter Property="Background" Value="#d44"/>
                </Trigger>
                <Trigger Property="Tag" Value="warn">
                    <Setter Property="BorderBrush" Value="#fc7"/>
                    <Setter Property="Background" Value="#fc7"/>
                </Trigger>
                <Trigger Property="Tag" Value="good">
                    <Setter Property="BorderBrush" Value="#4a8"/>
                    <Setter Property="Background" Value="#4a8"/>
                </Trigger>
                <Trigger Property="Tag" Value="blue">
                    <Setter Property="BorderBrush" Value="#48a"/>
                    <Setter Property="Background" Value="#48a"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>

    <Grid x:Name="grid_main" DataContext="{Binding ElementName=Page_EngOrder}">
        <Grid.RowDefinitions>
            <RowDefinition Height="34"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>
        <Grid x:Name="toolbar" Grid.Row="0" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" HorizontalAlignment="Left" Orientation="Horizontal">
                <Label x:Name="Lbl_JobNbr" Content="{Binding ColorSetInfo.SupplyOrderRef, FallbackValue=J000000000}"
                       VerticalAlignment="Center" Margin="20,0,0,0" FontWeight="Medium"
                       FontSize="{Binding MainViewModel.FontSize_H1_3, FallbackValue=20}"/>
            </StackPanel>
            <StackPanel Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal">
                <Button x:Name="Btn_RefreshHeader" Height="{Binding MainViewModel.FontSize_H1_3, FallbackValue=20}"
                        Style="{StaticResource MaterialDesignFlatButton}" Foreground="LightSkyBlue"
                        VerticalContentAlignment="Stretch" VerticalAlignment="Center"
                        Padding="6 0" Margin="0 0 4 0" Cursor="Hand"
                        Click="Btn_RefreshHeader_Click">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Refresh" VerticalAlignment="Center"/>
                        <materialDesign:PackIcon Margin="6 0 0 0"
                                                 Width="{Binding MainViewModel.FontSize_H1_3, FallbackValue=20}"
                                                 Height="{Binding MainViewModel.FontSize_H1_3, FallbackValue=20}"
                                                 Kind="Reload"/>
                    </StackPanel>
                </Button>
                <Button x:Name="Btn_SaveHeader" Height="22"
                        Style="{StaticResource MaterialDesignFlatButton}" Foreground="LightSkyBlue"
                        IsEnabled="{Binding ColorSetInfo_HasChanges, UpdateSourceTrigger=PropertyChanged, FallbackValue=False}"
                        VerticalContentAlignment="Stretch" VerticalAlignment="Stretch"
                        Padding="6 0" Margin="0 0 4 0" Cursor="Hand"
                        Click="Btn_SaveHeader_Click">
                    <StackPanel VerticalAlignment="Stretch" Orientation="Horizontal">
                        <TextBlock Text="Save Header" VerticalAlignment="Center"/>
                        <materialDesign:PackIcon Width="18" Height="18" Kind="FloppyDisc" VerticalAlignment="Center"
                                                 SnapsToDevicePixels="True" RenderOptions.BitmapScalingMode="HighQuality"
                                                 RenderOptions.EdgeMode="Aliased" RenderSize="32,32"
                                                 Margin="6 0 0 0"/>
                    </StackPanel>
                </Button>
                <CheckBox x:Name="Btn_CollapseTopBar" Content="Header" IsChecked="True"
                          Height="{Binding MainViewModel.FontSize_H1_3, FallbackValue=20}"
                          Padding="4 0" Margin="1 3"
                          FontSize="{Binding MainViewModel.FontSize_H4, FallbackValue=12}"
                          Click="Btn_CollapseTopBar_Click" Style="{StaticResource MaterialDesignFilterChipCheckBox}" materialDesign:CheckBoxAssist.CheckBoxSize="0"/>
                <CheckBox x:Name="Btn_CollapseSideGrid" Content="Row Edit Pane" IsChecked="False"
                          Height="{Binding MainViewModel.FontSize_H1_3, FallbackValue=20}"
                          Padding="4 0" Margin="1 3"
                          FontSize="{Binding MainViewModel.FontSize_H4, FallbackValue=12}"
                          Click="Btn_CollapseSideGrid_Click" Style="{StaticResource MaterialDesignFilterChipCheckBox}"/>
                <CheckBox x:Name="Btn_ToggleFiltersPnl" Content="Filter Bar" IsChecked="False"
                          Height="{Binding MainViewModel.FontSize_H1_3, FallbackValue=20}"
                          Padding="4 0" Margin="1 3"
                          FontSize="{Binding MainViewModel.FontSize_H4, FallbackValue=12}"
                          Click="Btn_FilterClose_Click" Style="{StaticResource MaterialDesignFilterChipCheckBox}"/>
            </StackPanel>
        </Grid>
        <Grid x:Name="grid_header" Grid.Row="1">
            <TabControl x:Name="header_tabcontrol" Grid.ColumnSpan="2" Background="#292929" TabStripPlacement="Right" Style="{StaticResource MaterialDesignNavigationRailTabControl}" VirtualizingPanel.VirtualizationMode="Recycling" VirtualizingPanel.IsVirtualizing="True">

                <TabItem Height="40" Width="100">
                    <TabItem.Header>
                        <TextBlock FontWeight="Medium" FontSize="{Binding MainViewModel.FontSize_H3, FallbackValue=14}" Text="General"/>
                    </TabItem.Header>

                    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" Width="{Binding ActualWidth, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type StackPanel}}}">
                        <WrapPanel HorizontalAlignment="Stretch" Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <!--Column 1 : General Info-->
                                <StackPanel MinWidth="76" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0">
                                    <Label Style="{StaticResource InputLabel}" Content="Order Nbr:"/>
                                    <Label Style="{StaticResource InputLabel}" Content="Line Nbr:"/>
                                    <Label Style="{StaticResource InputLabel}" Content="Job Nbr:"/>
                                    <Label Style="{StaticResource InputLabel}" Content="Quote:"/>
                                    <Label Style="{StaticResource InputLabel}" Content="Net Product:"/>
                                    <Label Style="{StaticResource InputLabel}" Content="Ship By Date:"/>
                                    <Label Style="{StaticResource InputLabel}" Content="Item:"/>
                                    <Label Style="{StaticResource InputLabel}" Content="Qty:"/>
                                    <Label Style="{StaticResource InputLabel}" Content="Engineer:"/>
                                </StackPanel>
                                <StackPanel MinWidth="80" HorizontalAlignment="Left" VerticalAlignment="Top" MaxWidth="115" Margin="0 0 4 0">
                                    <TextBox Style="{StaticResource InputStyle}" Text="{Binding Path=ColorSetInfo.OrderNumber,      FallbackValue='DefaultValue',   Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <TextBox Style="{StaticResource InputStyle}" Text="{Binding Path=ColorSetInfo.LineNumber,       FallbackValue='DefaultValue',   Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <TextBox Style="{StaticResource InputStyle}" Text="{Binding Path=ColorSetInfo.SupplyOrderRef,   FallbackValue='DefaultValue',   Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <TextBox Style="{StaticResource InputStyle}" Text="{Binding Path=ColorSetInfo.QuoteNbr,         FallbackValue='DefaultValue',   Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <TextBox Style="{StaticResource InputStyle}" Text="{Binding Path=ColorSetInfo.NetProduct,       FallbackValue='$1,234.00',      Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=C2}"/>
                                    <TextBox Style="{StaticResource InputStyle}" Text="{Binding Path=ColorSetInfo.ShipByDate,       FallbackValue='DefaultValue',   Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <TextBox Style="{StaticResource InputStyle}" Text="{Binding Path=ColorSetInfo.LineItem,         FallbackValue='DefaultValue',   Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <TextBox Style="{StaticResource InputStyle}" Text="{Binding Path=ColorSetInfo.Qty,              FallbackValue='DefaultValue',   Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <TextBox Style="{StaticResource InputStyle}" Text="{Binding Path=ColorSetInfo.Engineer,         FallbackValue='DefaultValue',   Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False"/>
                                </StackPanel>
                                <!--Column 2 : Basic Colors-->
                                <StackPanel MinWidth="73" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0">
                                    <Label Style="{StaticResource InputLabel}" Content="Frame:"/>
                                    <Label Style="{StaticResource InputLabel}" Content="Metal Comp:"/>
                                    <Label Style="{StaticResource InputLabel}" Content="Shelf:"/>
                                    <Label Style="{StaticResource InputLabel}" Content="Gib Leg:"/>
                                    <Label Style="{StaticResource InputLabel}" Content="Val Base:"/>
                                    <Label Style="{StaticResource InputLabel}" Content="Omt Leg:"/>
                                    <Label Style="{StaticResource InputLabel}" Content="Tbl Slim Leg:"/>
                                    <Label Style="{StaticResource InputLabel}" Content="Tangent Leg:"/>
                                    <Label Style="{StaticResource InputLabel}" Content="Ped Cushion:"/>
                                </StackPanel>
                                <StackPanel MinWidth="80" HorizontalAlignment="Left" MaxWidth="105" Margin="0 0 4 0">
                                    <ComboBox Style="{StaticResource InputComboBoxStyle}" ItemsSource="{Binding Finishes_Default}"  SelectedItem="{Binding Path=ColorSetInfo.FrameFin,          Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedValue="{Binding Path=ColorSetInfo.FrameFin,           Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <ComboBox Style="{StaticResource InputComboBoxStyle}" ItemsSource="{Binding Finishes_Default}"  SelectedItem="{Binding Path=ColorSetInfo.MetalFin,          Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedValue="{Binding Path=ColorSetInfo.MetalFin,           Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <ComboBox Style="{StaticResource InputComboBoxStyle}" ItemsSource="{Binding Finishes_Default}"  SelectedItem="{Binding Path=ColorSetInfo.ShelfFin,          Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedValue="{Binding Path=ColorSetInfo.ShelfFin,           Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <ComboBox Style="{StaticResource InputComboBoxStyle}" ItemsSource="{Binding Finishes_Default}"  SelectedItem="{Binding Path=ColorSetInfo.TblLegFin,         Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedValue="{Binding Path=ColorSetInfo.TblLegFin,          Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <ComboBox Style="{StaticResource InputComboBoxStyle}" ItemsSource="{Binding Finishes_BS}"       SelectedItem="{Binding Path=ColorSetInfo.TblBaseFin,        Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedValue="{Binding Path=ColorSetInfo.TblBaseFin,         Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <ComboBox Style="{StaticResource InputComboBoxStyle}" ItemsSource="{Binding Finishes_Omt}"      SelectedItem="{Binding Path=ColorSetInfo.TblLegBaseFin,     Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedValue="{Binding Path=ColorSetInfo.TblLegBaseFin,      Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <ComboBox Style="{StaticResource InputComboBoxStyle}" ItemsSource="{Binding Finishes_SlimLeg}"  SelectedItem="{Binding Path=ColorSetInfo.TblSlimLegFin,     Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedValue="{Binding Path=ColorSetInfo.TblSlimLegFin,      Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <ComboBox Style="{StaticResource InputComboBoxStyle}" ItemsSource="{Binding Finishes_TangLeg}"  SelectedItem="{Binding Path=ColorSetInfo.TangentLegFin,     Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedValue="{Binding Path=ColorSetInfo.TangentLegFin,      Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <ComboBox Style="{StaticResource InputComboBoxStyle}" ItemsSource="{Binding Finishes_PedCush}"  SelectedItem="{Binding Path=ColorSetInfo.PedCushionColor,   Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedValue="{Binding Path=ColorSetInfo.PedCushionColor,    Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                <!--Column 3 : Materials-->
                                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0">
                                    <Label Style="{StaticResource InputLabel}" Content="Fabric:"/>
                                    <Label Style="{StaticResource InputLabel}" Content="Wks Lam:"/>
                                    <Label Style="{StaticResource InputLabel}" Content="Wks Edge:"/>
                                    <Label Style="{StaticResource InputLabel}" Content="Mel Pnl:"/>
                                    <Label Style="{StaticResource InputLabel}" Content="Lam Pnl:"/>
                                    <Label Style="{StaticResource InputLabel}" Content="Chase Door:"/>
                                    <Label Style="{StaticResource InputLabel}" Content="Acrylic:"/>
                                    <Label Style="{StaticResource InputLabel}" Content="HC Door Lam:"/>
                                    <Label Style="{StaticResource InputLabel}" Content="Curve Lam:"/>
                                </StackPanel>
                                <StackPanel x:Name="SPnl_LookupButtons" Width="{Binding MainViewModel.FontSize_H2_1, FallbackValue=16}">
                                    <Button Tag="fab" Style="{StaticResource BtnLookupStyle}" Click="BtnLookup_Click">
                                        <Image Style="{StaticResource BtnLookupImageStyle}"/>
                                    </Button>
                                    <Button Tag="wks" Style="{StaticResource BtnLookupStyle}" Click="BtnLookup_Click">
                                        <Image Style="{StaticResource BtnLookupImageStyle}"/>
                                    </Button>
                                    <Button Tag="web" Style="{StaticResource BtnLookupStyle}" Click="BtnLookup_Click">
                                        <Image Style="{StaticResource BtnLookupImageStyle}"/>
                                    </Button>
                                    <Button Tag="mel" Style="{StaticResource BtnLookupStyle}" Click="BtnLookup_Click">
                                        <Image Style="{StaticResource BtnLookupImageStyle}"/>
                                    </Button>
                                    <Button Tag="lam" Style="{StaticResource BtnLookupStyle}" Click="BtnLookup_Click">
                                        <Image Style="{StaticResource BtnLookupImageStyle}"/>
                                    </Button>
                                    <Button Tag="chs" Style="{StaticResource BtnLookupStyle}" Click="BtnLookup_Click">
                                        <Image Style="{StaticResource BtnLookupImageStyle}"/>
                                    </Button>
                                    <Button Tag="acr" Style="{StaticResource BtnLookupStyle}" Click="BtnLookup_Click">
                                        <Image Style="{StaticResource BtnLookupImageStyle}"/>
                                    </Button>
                                    <Button Tag="hcd" Style="{StaticResource BtnLookupStyle}" Click="BtnLookup_Click">
                                        <Image Style="{StaticResource BtnLookupImageStyle}"/>
                                    </Button>
                                    <Button Tag="crv" Style="{StaticResource BtnLookupStyle}" Click="BtnLookup_Click">
                                        <Image Style="{StaticResource BtnLookupImageStyle}"/>
                                    </Button>
                                </StackPanel>
                                <StackPanel x:Name="SPnl_LookupInputs" MinWidth="290" MaxWidth="455" Margin="0 0 4 0">
                                    <TextBox Style="{StaticResource InputLookupStyle}" Tag="{Binding ColorSetInfo.Fabric1Id, UpdateSourceTrigger=PropertyChanged}"/>
                                    <TextBox Style="{StaticResource InputLookupStyle}" Tag="{Binding ColorSetInfo.WksLamId, UpdateSourceTrigger=PropertyChanged}"/>
                                    <TextBox Style="{StaticResource InputLookupStyle}" Tag="{Binding ColorSetInfo.WksEdgeId, UpdateSourceTrigger=PropertyChanged}"/>
                                    <TextBox Style="{StaticResource InputLookupStyle}" Tag="{Binding ColorSetInfo.TflpnlId, UpdateSourceTrigger=PropertyChanged}"/>
                                    <TextBox Style="{StaticResource InputLookupStyle}" Tag="{Binding ColorSetInfo.LamPnlId, UpdateSourceTrigger=PropertyChanged}"/>
                                    <TextBox Style="{StaticResource InputLookupStyle}" Tag="{Binding ColorSetInfo.ChaseDoorId, UpdateSourceTrigger=PropertyChanged}"/>
                                    <TextBox Style="{StaticResource InputLookupStyle}" Tag="{Binding ColorSetInfo.AcrylicId, UpdateSourceTrigger=PropertyChanged}"/>
                                    <TextBox Style="{StaticResource InputLookupStyle}" Tag="{Binding ColorSetInfo.LamHcdoorId, UpdateSourceTrigger=PropertyChanged}"/>
                                    <TextBox Style="{StaticResource InputLookupStyle}" Tag="{Binding ColorSetInfo.LamCurveId, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                <!--Column 4 : Buttons-->
                                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="20 0 4 0">
                                    <Button x:Name="Btn_ExtProc_ImpMfg" Content="Mfg Import" Tag="IceMfgImp" Padding="4 2" Margin="0 1" FontSize="{Binding MainViewModel.FontSize_H4, FallbackValue=12}" Style="{StaticResource MaterialDesignPaperButton}" Click="Btn_ExtProc_ImpMfg_Click" />
                                    <Button x:Name="Btn_ExtProc_EngPrc" Content="Eng Process" Tag="IceEngProc" Padding="4 2" Margin="0 1" FontSize="{Binding MainViewModel.FontSize_H4, FallbackValue=12}" Style="{StaticResource MaterialDesignPaperButton}" Click="Btn_ExtProc_EngPrc_Click" />
                                    <Button x:Name="Btn_ExtProc_Matl" Content="Material Calc" Tag="IceMatlCalc" Padding="4 2" Margin="0 1" FontSize="{Binding MainViewModel.FontSize_H4, FallbackValue=12}" Style="{StaticResource MaterialDesignPaperButton}" Click="Btn_ExtProc_Matl_Click" />
                                    <Button x:Name="Btn_ExtProc_Cutlst" Content="CNC Cutlist" Tag="CNC CutList" Padding="4 2" Margin="0 1" FontSize="{Binding MainViewModel.FontSize_H4, FallbackValue=12}" Style="{StaticResource MaterialDesignPaperButton}" Click="Btn_ExtProc_Cutlst_Click" />
                                    <Button x:Name="Btn_ExtProc_SlExp" Content="Syteline Export" Tag="SyteLineExp" Padding="4 2" Margin="0 1" FontSize="{Binding MainViewModel.FontSize_H4, FallbackValue=12}" Style="{StaticResource MaterialDesignPaperButton}" Click="Btn_ExtProc_SlExp_Click" />
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch">
                                <Label Style="{StaticResource InputMultilineLabel}" Content="Notes:"/>
                                <TextBox Style="{StaticResource InputMultilineStyle}" MinWidth="500" MaxWidth="800"
                                         Text="{Binding Path=ColorSetInfo.Notes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Height="{Binding MainViewModel.FontSize_H4, FallbackValue=36, Converter={conv:ScalingConverter}, ConverterParameter=3}"/>
                            </StackPanel>
                        </WrapPanel>
                    </ScrollViewer>
                </TabItem>
                <TabItem Height="40" Width="100">
                    <TabItem.Header>
                        <TextBlock FontWeight="Medium" FontSize="{Binding MainViewModel.FontSize_H3, FallbackValue=14}" Text="Colors+"/>
                    </TabItem.Header>
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" Width="{Binding ActualWidth, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type StackPanel}}}">
                        <WrapPanel HorizontalAlignment="Stretch" Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <!--Column 1 : Extra Materials-->
                                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" VerticalAlignment="Stretch" Margin="0">
                                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0">
                                        <Label Style="{StaticResource InputLabel}" Content="Acrylic 2:"/>
                                        <Label Style="{StaticResource InputLabel}" Content="Fabric 2:"/>
                                        <Label Style="{StaticResource InputLabel}" Content="Fabric 3:"/>
                                        <Label Style="{StaticResource InputLabel}" Content="Wks Lam 2:"/>
                                        <Label Style="{StaticResource InputLabel}" Content="Lam Pnl 2:"/>
                                        <Label Style="{StaticResource InputLabel}" Content="Mel Pnl 2:"/>
                                    </StackPanel>
                                    <StackPanel x:Name="SPnl_LookupButtonsExtra" Width="{Binding MainViewModel.FontSize_H2_1, FallbackValue=16}">
                                        <Button Tag="acr" Style="{StaticResource BtnLookupStyle}" Click="BtnLookup_Click">
                                            <Image Style="{StaticResource BtnLookupImageStyle}"/>
                                        </Button>
                                        <Button Tag="fab" Style="{StaticResource BtnLookupStyle}" Click="BtnLookup_Click">
                                            <Image Style="{StaticResource BtnLookupImageStyle}"/>
                                        </Button>
                                        <Button Tag="fab" Style="{StaticResource BtnLookupStyle}" Click="BtnLookup_Click">
                                            <Image Style="{StaticResource BtnLookupImageStyle}"/>
                                        </Button>
                                        <Button Tag="wks" Style="{StaticResource BtnLookupStyle}" Click="BtnLookup_Click">
                                            <Image Style="{StaticResource BtnLookupImageStyle}"/>
                                        </Button>
                                        <Button Tag="lam" Style="{StaticResource BtnLookupStyle}" Click="BtnLookup_Click">
                                            <Image Style="{StaticResource BtnLookupImageStyle}"/>
                                        </Button>
                                        <Button Tag="mel" Style="{StaticResource BtnLookupStyle}" Click="BtnLookup_Click">
                                            <Image Style="{StaticResource BtnLookupImageStyle}"/>
                                        </Button>
                                    </StackPanel>
                                    <StackPanel x:Name="SPnl_LookupInputsExtra" MinWidth="290" MaxWidth="455" Margin="0 0 4 0">
                                        <TextBox Style="{StaticResource InputLookupStyle}" Tag="{Binding ColorSetInfo.Acrylic2Id, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBox Style="{StaticResource InputLookupStyle}" Tag="{Binding ColorSetInfo.Fabric2Id, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBox Style="{StaticResource InputLookupStyle}" Tag="{Binding ColorSetInfo.Fabric3Id, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBox Style="{StaticResource InputLookupStyle}" Tag="{Binding ColorSetInfo.WksLam2Id, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBox Style="{StaticResource InputLookupStyle}" Tag="{Binding ColorSetInfo.LamPnl2Id, UpdateSourceTrigger=PropertyChanged}"/>
                                        <TextBox Style="{StaticResource InputLookupStyle}" Tag="{Binding ColorSetInfo.Tflpnl2Id, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                </StackPanel>
                                <!--Column 2 : Misc Colors-->
                                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0">
                                    <Label Style="{StaticResource InputLabel}" Content="Custom 1:" IsEnabled="False"/>
                                    <Label Style="{StaticResource InputLabel}" Content="Custom 2:" IsEnabled="False"/>
                                    <Label Style="{StaticResource InputLabel}" Content="UnderWsPnl:"/>
                                    <Label Style="{StaticResource InputLabel}" Content="PmoldFin:"/>
                                    <Label Style="{StaticResource InputLabel}" Content="AccFin:"/>
                                </StackPanel>
                                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0">
                                    <TextBox Style="{StaticResource InputStyle}" Text="-" IsEnabled="False"/>
                                    <TextBox Style="{StaticResource InputStyle}" Text="-" IsEnabled="False"/>
                                    <TextBox Style="{StaticResource InputStyle}" Text="{Binding Path=ColorSetInfo.UnderWsPnlType, FallbackValue='DefaultValue', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <ComboBox Style="{StaticResource InputComboBoxStyle}" ItemsSource="{Binding Finishes_Default}" SelectedItem="{Binding Path=ColorSetInfo.PmoldFin, FallbackValue='', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <ComboBox Style="{StaticResource InputComboBoxStyle}" ItemsSource="{Binding Finishes_Default}" SelectedItem="{Binding Path=ColorSetInfo.AccFin, FallbackValue='', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                <!--Column 2 : Misc Toggles-->
                                <StackPanel Width="120" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0 0 4 0">
                                    <CheckBox Style="{StaticResource InputCheckBoxStyle}" Content="Preengined"      IsChecked="{Binding ColorSetInfo.Preengined, Mode=TwoWay}"/>
                                    <CheckBox Style="{StaticResource InputCheckBoxStyle}" Content="Engined"         IsChecked="{Binding ColorSetInfo.Engined, Mode=TwoWay}"/>
                                    <CheckBox Style="{StaticResource InputCheckBoxStyle}" Content="KeyAlike"        IsChecked="{Binding ColorSetInfo.KeyAlike, Mode=TwoWay}"/>
                                    <CheckBox Style="{StaticResource InputCheckBoxStyle}" Content="KeyEaStaAlike"   IsChecked="{Binding ColorSetInfo.KeyEaStaAlike, Mode=TwoWay}"/>
                                    <CheckBox Style="{StaticResource InputCheckBoxStyle}" Content="MasterKey"       IsChecked="{Binding ColorSetInfo.MasterKey, Mode=TwoWay}"/>
                                    <CheckBox Style="{StaticResource InputCheckBoxStyle}" Content="EarlyElectrical" IsChecked="{Binding ColorSetInfo.EarlyElectrical, Mode=TwoWay}"/>
                                    <CheckBox Style="{StaticResource InputCheckBoxStyle}" Content="XQ"              IsChecked="{Binding ColorSetInfo.Xq, Mode=TwoWay}"/>
                                    <CheckBox Style="{StaticResource InputCheckBoxStyle}" Content="UpdateRecord"    IsChecked="{Binding ColorSetInfo.UpdateRecord, Mode=TwoWay}"/>
                                    <CheckBox Style="{StaticResource InputCheckBoxStyle}" Content="InstallByIC"     IsChecked="{Binding ColorSetInfo.InstallByIc, Mode=TwoWay}"/>
                                </StackPanel>
                            </StackPanel>
                        </WrapPanel>
                    </ScrollViewer>
                </TabItem>
                <TabItem Height="40" Width="100">
                    <TabItem.Header>
