                            </StackPanel>
                            <!--Column 2 : Basic Colors-->
                            <StackPanel Width="150" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0 0 4 0">
                                <Components:LabelComboPair x:Name="FrmFin" LabelText="FrameFin" LabelWidth="96" InputReadOnly="False" ItemSource="{Binding Path=Finishes_Default}" InputText="{Binding ColorSetInfo.FrameFin, Mode=TwoWay}"/>
                                <Components:LabelComboPair LabelText="Metal Comp" LabelWidth="96" InputReadOnly="False" ItemSource="{Binding Finishes_Default}" InputText="{Binding ColorSetInfo.PedFin, Mode=TwoWay}"/>
                                <Components:LabelComboPair LabelText="ShelfFin" LabelWidth="96" InputReadOnly="False" ItemSource="{Binding Finishes_Default}" InputText="{Binding ColorSetInfo.ShelfFin, Mode=TwoWay}"/>
                                <Components:LabelComboPair LabelText="GibLegFin" LabelWidth="96" InputReadOnly="False" ItemSource="{Binding Finishes_Default}" InputText="{Binding ColorSetInfo.TblLegFin, Mode=TwoWay}"/>
