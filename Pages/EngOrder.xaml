<Page x:Class="OMPS.Pages.EngOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OMPS"
      xmlns:Components="clr-namespace:OMPS.Components"
      xmlns:pages="clr-namespace:OMPS.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      x:Name="Page_EngOrder"
      mc:Ignorable="d" UseLayoutRounding="False"
      d:DesignHeight="600" d:DesignWidth="1025"
      Title="EngOrder"
      DataContext="{Binding ElementName=Page_EngOrder}"
      PreviewKeyDown="Page_EngOrder_PreviewKeyDown"
      >
    <Page.Resources>
        <local:NullToBooleanConverter x:Key="NullToBooleanConverter"/>
        <CollectionViewSource x:Key="MfgItemsViewSource" Source="{Binding MfgItemLines}" Filter="MfgItemsViewSource_Filter"/>
    </Page.Resources>

    <Grid DataContext="{Binding ElementName=Page_EngOrder}">
        <Grid.CacheMode>
            <CacheMode>BitmapCache</CacheMode>
        </Grid.CacheMode>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="toolbar" Grid.Row="0" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" HorizontalAlignment="Left" Orientation="Horizontal">
                <Label x:Name="Lbl_JobNbr" Content="{Binding ColorSetInfo.SupplyOrderRef}" VerticalAlignment="Center" FontSize="20" Margin="20,0,0,0"/>
            </StackPanel>
            <StackPanel Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal">
                <Button x:Name="Btn_SaveHeader" Width="18" Height="18" Style="{StaticResource SaveBtn}"
                    Padding="0" Margin="0" Cursor="Hand" SourceUpdated="Btn_SaveHeader_SourceUpdated">
                    <Image x:Name="Img_SaveHeader" Width="18" Height="18"
                       SnapsToDevicePixels="True" RenderOptions.BitmapScalingMode="HighQuality"
                       RenderOptions.EdgeMode="Aliased" RenderSize="32,32"/>
                </Button>
                <Button x:Name="Btn_CollapseTopBar" Content="Toggle Header" Height="22"
                    Width="Auto" Padding="4 0" Margin="1 0" Click="Btn_CollapseTopBar_Click"/>
                <Button x:Name="Btn_CollapseSideGrid" Content="Toggle Row Edit Pane"
                    Height="22" Width="Auto" Padding="4 0" Margin="1 0" Click="Btn_CollapseSideGrid_Click"/>
            </StackPanel>
        </Grid>
        <Grid x:Name="grid_header" Grid.Row="1">
            <TabControl x:Name="header_tabcontrol" Grid.ColumnSpan="2" TabStripPlacement="Right" FontSize="13">
                <TabItem Header="General" Height="40">
                    <!--
                Use Grid for vertical stacks, then nested StackPanels for further splitting
                -->
                    <Grid Height="270" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="24"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Top">
                            <!--Column 1 : General Info-->
                            <StackPanel Width="180" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0 0 4 0">
                                <Components:LabelInputPair x:Name="head_OrderNbr" LabelWidth="85" LabelText="OrderNbr" InputReadOnly="True" InputText="{Binding ColorSetInfo.OrderNumber, Mode=TwoWay}"/>
                                <Components:LabelInputPair LabelWidth="85" LabelText="LineNbr" InputReadOnly="True" InputText="{Binding ColorSetInfo.LineNumber, Mode=TwoWay}"/>
                                <Components:LabelInputPair LabelWidth="85" LabelText="JobNbr" InputReadOnly="True" InputText="{Binding ColorSetInfo.SupplyOrderRef, Mode=TwoWay}"/>
                                <Components:LabelInputLookupPair LabelFullWidth="85" LabelText="Quote" LookupEnabled="False" InputText="{Binding ColorSetInfo.QuoteNbr, Mode=TwoWay}"/>
                                <Components:LabelInputCurrencyPair LabelWidth="85" LabelText="NetProduct" InputReadOnly="True" InputText="{Binding ColorSetInfo.NetProduct, Mode=TwoWay}"/>
                                <Components:LabelInputPair LabelWidth="85" LabelText="ShipByDate" InputReadOnly="True" InputText="{Binding ColorSetInfo.ShipByDate, Mode=TwoWay}"/>
                                <Components:LabelInputPair LabelWidth="85" LabelText="Item" InputReadOnly="True" InputText="{Binding ColorSetInfo.LineItem, Mode=TwoWay}"/>
                                <Components:LabelInputPair LabelWidth="85" LabelText="Qty" InputReadOnly="True" InputText="{Binding ColorSetInfo.Qty, Mode=TwoWay}"/>
                            </StackPanel>
                            <!--Column 2 : Basic Colors-->
                            <StackPanel Width="170" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0 0 4 0">
                                <Components:LabelComboPair x:Name="FrmFin" LabelText="FrameFin" LabelWidth="100" InputReadOnly="False" ItemSource="{Binding Path=Finishes_Default}" InputText="{Binding ColorSetInfo.FrameFin, Mode=TwoWay}"/>
                                <Components:LabelComboPair LabelText="Metal Comp" LabelWidth="100" InputReadOnly="False" ItemSource="{Binding Finishes_Default}" InputText="{Binding ColorSetInfo.PedFin, Mode=TwoWay}"/>
                                <Components:LabelComboPair LabelText="ShelfFin" LabelWidth="100" InputReadOnly="False" ItemSource="{Binding Finishes_Default}" InputText="{Binding ColorSetInfo.ShelfFin, Mode=TwoWay}"/>
                                <Components:LabelComboPair LabelText="GibLegFin" LabelWidth="100" InputReadOnly="False" ItemSource="{Binding Finishes_Default}" InputText="{Binding ColorSetInfo.TblLegFin, Mode=TwoWay}"/>
                                <Components:LabelComboPair LabelText="ValBaseFin" LabelWidth="100" InputReadOnly="False" ItemSource="{Binding Finishes_BS}" InputText="{Binding ColorSetInfo.TblBaseFin, Mode=TwoWay}"/>
                                <Components:LabelComboPair LabelText="OmtLegFin" LabelWidth="100" InputReadOnly="False" InputText="{Binding ColorSetInfo.TblLegBaseFin, Mode=TwoWay}"/>
                                <Components:LabelComboPair LabelText="TblSlimLegFin" LabelWidth="100" InputReadOnly="False" InputText="{Binding ColorSetInfo.TblSlimLegFin, Mode=TwoWay}"/>
                                <Components:LabelComboPair LabelText="TangentLegFin" LabelWidth="90" InputReadOnly="False" InputText="{Binding ColorSetInfo.TangentLegFin, Mode=TwoWay}"/>
                                <Components:LabelComboPair LabelText="PedCushion" LabelWidth="77" InputReadOnly="False" InputText="{Binding ColorSetInfo.PedCushionColor, Mode=TwoWay}"/>
                            </StackPanel>
                            <!--Column 3 : Materials-->
                            <StackPanel Width="280" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0 0 4 0">
                                <Components:LabelInputLookupPair LabelText="Fabric" LabelWidth="82" InputText="{Binding ColorSetInfo.Fabric1ID, Mode=TwoWay}"/>
                                <Components:LabelInputLookupPair LabelText="Wks Lam" LabelWidth="82" InputText="{Binding ColorSetInfo.WksLamID, Mode=TwoWay}"/>
                                <Components:LabelInputLookupPair LabelText="Wks Edge" LabelWidth="82" InputText="{Binding ColorSetInfo.WksEdgeID, Mode=TwoWay}"/>
                                <Components:LabelInputLookupPair LabelText="Mel Pnl" LabelWidth="82" InputText="{Binding ColorSetInfo.MelPnlID, Mode=TwoWay}"/>
                                <Components:LabelInputLookupPair LabelText="Lam Pnl" LabelWidth="82" InputText="{Binding ColorSetInfo.LamPnlID, Mode=TwoWay}"/>
                                <Components:LabelInputLookupPair LabelText="Chase Door" LabelWidth="82" InputText="{Binding ColorSetInfo.ChaseDoorID, Mode=TwoWay}"/>
                                <Components:LabelInputLookupPair LabelText="Acrylic" LabelWidth="82" InputText="{Binding ColorSetInfo.AcrylicID, Mode=TwoWay}"/>
                                <Components:LabelInputLookupPair LabelText="Lam HC Door" LabelWidth="82" InputText="{Binding ColorSetInfo.LamHCDoorID, Mode=TwoWay}"/>
                                <Components:LabelInputLookupPair LabelText="Lam Curve" LabelWidth="82" InputText="{Binding ColorSetInfo.LamCurveID, Mode=TwoWay}"/>
                            </StackPanel>
                            <!--Column 4 : Buttons-->
                            <StackPanel Width="100" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="20 0 4 0">
                                <Button Content="Mfg Import" Tag="IceMfgImp" Padding="1" Margin="0 1" FontSize="12" />
                                <Button Content="Eng Process" Tag="IceEngProc" Padding="1" Margin="0 1" FontSize="12" />
                                <Button Content="Material Calc" Tag="IceMatlCalc" Padding="1" Margin="0 1" FontSize="12" />
                                <Button Content="CNC Cutlist" Tag="CNC CutList" Padding="1" Margin="0 1" FontSize="12" />
                                <Button Content="Syteline Export" Tag="SyteLineExp" Padding="1" Margin="0 1" FontSize="12" />
                            </StackPanel>
                        </StackPanel>
                        <Components:LabelInputPair Grid.Row="1" LabelText="Notes" LabelWidth="43" InputText="{Binding ColorSetInfo.Notes, Mode=TwoWay}" InputReadOnly="False"/>
                    </Grid>
