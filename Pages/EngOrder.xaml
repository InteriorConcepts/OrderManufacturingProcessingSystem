    <Page.Resources>
        <CollectionViewSource x:Key="MfgItemsViewSource" Source="{Binding MfgItemLines}" Filter="MfgItemsViewSource_Filter"/>
    </Page.Resources>

    <Grid DataContext="{Binding ElementName=Page_EngOrder}">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="toolbar" Grid.Row="0" HorizontalAlignment="Stretch" Background="#333">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" HorizontalAlignment="Left" Orientation="Horizontal">
                <Label Content="JobNbr:" VerticalAlignment="Center" Foreground="#EEE"/>
                <TextBox x:Name="Txtbx_Job" IsReadOnly="False" Text="J000035601" Width="137" Height="22"
                        TabIndex="0"/>
            </StackPanel>
            <StackPanel Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal">
                <Button x:Name="Btn_SaveHeader" Width="18" Height="18" Style="{StaticResource SaveBtn}"
                    Padding="0" Margin="0" Background="Transparent" Cursor="Hand">
                    <TextBlock Foreground="White" FontFamily="Segoe Fluent Icons"></TextBlock>
