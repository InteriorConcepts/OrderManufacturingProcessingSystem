<UserControl x:Class="OMPS.Pages.EngOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OMPS"
      xmlns:conv="clr-namespace:OMPS.Converters"
      xmlns:Components="clr-namespace:OMPS.Components"
      xmlns:pages="clr-namespace:OMPS.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      x:Name="Page_EngOrder" VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.VirtualizationMode="Recycling"
      mc:Ignorable="d" UseLayoutRounding="False"
      d:DesignHeight="2400" d:DesignWidth="1025"
      DataContext="{Binding ElementName=Page_EngOrder}"
      PreviewKeyDown="Page_EngOrder_PreviewKeyDown"
      FontSize="{Binding DataGridFontSize, ElementName=Page_EngOrder, FallbackValue=12}"
      >
    <UserControl.CacheMode>
        <BitmapCache RenderAtScale="2" EnableClearType="True" SnapsToDevicePixels="True"/>
    </UserControl.CacheMode>
    <UserControl.Resources>
        <CollectionViewSource x:Key="MfgItemsViewSource" x:Name="MfgItemsViewSource" Source="{Binding MfgItemLines}" Filter="MfgItemsViewSource_Filter"/>
    </UserControl.Resources>

    <Grid DataContext="{Binding ElementName=Page_EngOrder}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>
        <Grid x:Name="toolbar" Grid.Row="0" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" HorizontalAlignment="Left" Orientation="Horizontal">
                <Label x:Name="Lbl_JobNbr" Content="{Binding ColorSetInfo.SupplyOrderRef, FallbackValue=J000000000}"
                       VerticalAlignment="Center" Margin="20,0,0,0" FontWeight="Medium"
                       FontSize="{Binding MainViewModel.FontSize_H1_3, FallbackValue=20}"/>
            </StackPanel>
            <StackPanel Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal">
                <Button x:Name="Btn_RefreshHeader" Height="{Binding MainViewModel.FontSize_H1_3, FallbackValue=20}" Width="{Binding MainViewModel.FontSize_H1_3, FallbackValue=20}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        VerticalContentAlignment="Stretch" VerticalAlignment="Center"
                        Padding="0" Margin="0 0 2 0" Cursor="Hand"
                        Click="Btn_RefreshHeader_Click">
                    <materialDesign:PackIcon Foreground="LightSkyBlue" Width="{Binding MainViewModel.FontSize_H1_3, FallbackValue=20}" Height="{Binding MainViewModel.FontSize_H1_3, FallbackValue=20}" Kind="Reload"/>
                </Button>
                <Button x:Name="Btn_SaveHeader" Height="22" Width="Auto"
                        Style="{StaticResource SaveBtn}" IsEnabled="False"
                        VerticalContentAlignment="Stretch" VerticalAlignment="Center"
                        Padding="8 0" Margin="0 0 2 0" Cursor="Hand"
                        Click="Btn_SaveHeader_Click">
                    <Image x:Name="Img_SaveHeader" Width="18" Height="18" IsEnabled="False"
                       SnapsToDevicePixels="True" RenderOptions.BitmapScalingMode="HighQuality"
                       RenderOptions.EdgeMode="Aliased" RenderSize="32,32"/>
                </Button>
                <CheckBox x:Name="Btn_CollapseTopBar" Content="Header" IsChecked="True"
                          Width="Auto" Height="{Binding MainViewModel.FontSize_H1_3, FallbackValue=20}"
                          Padding="4 0" Margin="1 3"
                          FontSize="{Binding MainViewModel.FontSize_H4, FallbackValue=12}"
                          Click="Btn_CollapseTopBar_Click" Style="{StaticResource MaterialDesignFilterChipCheckBox}" materialDesign:CheckBoxAssist.CheckBoxSize="0"/>
                <CheckBox x:Name="Btn_CollapseSideGrid" Content="Row Edit Pane" IsChecked="True"
                          Width="Auto" Height="{Binding MainViewModel.FontSize_H1_3, FallbackValue=20}"
                          Padding="4 0" Margin="1 3"
                          FontSize="{Binding MainViewModel.FontSize_H4, FallbackValue=12}"
                          Click="Btn_CollapseSideGrid_Click" Style="{StaticResource MaterialDesignFilterChipCheckBox}"/>
                <CheckBox x:Name="Btn_ToggleFiltersPnl" Content="Filter Bar" IsChecked="False"
                          Width="Auto" Height="{Binding MainViewModel.FontSize_H1_3, FallbackValue=20}"
                          Padding="4 0" Margin="1 3"
                          FontSize="{Binding MainViewModel.FontSize_H4, FallbackValue=12}"
                          Click="Btn_FilterClose_Click" Style="{StaticResource MaterialDesignFilterChipCheckBox}"/>
            </StackPanel>
        </Grid>
        <Grid x:Name="grid_header" Grid.Row="1">
            <TabControl x:Name="header_tabcontrol" Grid.ColumnSpan="2" Background="#292929" TabStripPlacement="Right" FontSize="13" Style="{StaticResource MaterialDesignNavigationRailTabControl}">
                
                <TabItem Height="40">
                    <TabItem.Header>
                        <TextBlock Width="Auto" FontWeight="Medium" FontSize="{Binding MainViewModel.FontSize_H3, FallbackValue=14}" Text="General"/>
                    </TabItem.Header>
                    <!--
                Use Grid for vertical stacks, then nested StackPanels for further splitting
                -->
                    <Grid Height="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="24"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Top">
                            <!--Column 1 : General Info-->
                            <StackPanel Width="180" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0 0 4 0">
                                <Components:LabelInputPair x:Name="head_OrderNbr" LabelWidth="85" LabelText="OrderNbr" InputReadOnly="True" FontSize="{Binding DataContext.FontSize_H4, ElementName=Page_EngOrder, FallbackValue=12, UpdateSourceTrigger=PropertyChanged}" InputText="{Binding ColorSetInfo.OrderNumber, Mode=TwoWay}"/>
                                <Components:LabelInputPair LabelWidth="85" LabelText="LineNbr" InputReadOnly="True" InputText="{Binding ColorSetInfo.LineNumber, Mode=TwoWay}"/>
                                <Components:LabelInputPair LabelWidth="85" LabelText="JobNbr" InputReadOnly="True" InputText="{Binding ColorSetInfo.SupplyOrderRef, Mode=TwoWay}"/>
                                <Components:LabelInputLookupPair LabelFullWidth="85" LabelText="Quote" LookupEnabled="False" InputLookup="{Binding ColorSetInfo.QuoteNbr, Mode=TwoWay}"/>
                                <Components:LabelInputCurrencyPair LabelWidth="85" LabelText="NetProduct" InputReadOnly="True" InputText="{Binding ColorSetInfo.NetProduct, Mode=TwoWay}"/>
                                <Components:LabelInputPair LabelWidth="85" LabelText="ShipByDate" InputReadOnly="True" InputText="{Binding ColorSetInfo.ShipByDate, Mode=TwoWay}"/>
                                <Components:LabelInputPair LabelWidth="85" LabelText="Item" InputReadOnly="True" InputText="{Binding ColorSetInfo.LineItem, Mode=TwoWay}"/>
                                <Components:LabelInputPair LabelWidth="85" LabelText="Qty" InputReadOnly="True" InputText="{Binding ColorSetInfo.Qty, Mode=TwoWay}"/>
                                <Components:LabelInputPair LabelWidth="85" LabelText="Engineer" InputReadOnly="False" InputText="{Binding ColorSetInfo.Engineer, Mode=TwoWay}"/>
                            </StackPanel>
                            <!--Column 2 : Basic Colors-->
                            <StackPanel Width="170" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0 0 4 0">
                                <Components:LabelComboPair x:Name="FrmFin" LabelText="FrameFin" LabelWidth="100" InputReadOnly="False" ItemSource="{Binding Path=Finishes_Default}" InputText="{Binding ColorSetInfo.FrameFin, Mode=TwoWay}"/>
                                <Components:LabelComboPair LabelText="Metal Comp" LabelWidth="100" InputReadOnly="False" ItemSource="{Binding Finishes_Default}" InputText="{Binding ColorSetInfo.PedFin, Mode=TwoWay}"/>
                                <Components:LabelComboPair LabelText="ShelfFin" LabelWidth="100" InputReadOnly="False" ItemSource="{Binding Finishes_Default}" InputText="{Binding ColorSetInfo.ShelfFin, Mode=TwoWay}"/>
                                <Components:LabelComboPair LabelText="GibLegFin" LabelWidth="100" InputReadOnly="False" ItemSource="{Binding Finishes_Default}" InputText="{Binding ColorSetInfo.TblLegFin, Mode=TwoWay}"/>
                                <Components:LabelComboPair LabelText="ValBaseFin" LabelWidth="100" InputReadOnly="False" ItemSource="{Binding Finishes_BS}" InputText="{Binding ColorSetInfo.TblBaseFin, Mode=TwoWay}"/>
                                <Components:LabelComboPair LabelText="OmtLegFin" LabelWidth="100" InputReadOnly="False" InputText="{Binding ColorSetInfo.TblLegBaseFin, Mode=TwoWay}"/>
                                <Components:LabelComboPair LabelText="TblSlimLegFin" LabelWidth="100" InputReadOnly="False" InputText="{Binding ColorSetInfo.TblSlimLegFin, Mode=TwoWay}"/>
                                <Components:LabelComboPair LabelText="TangentLegFin" LabelWidth="90" InputReadOnly="False" InputText="{Binding ColorSetInfo.TangentLegFin, Mode=TwoWay}"/>
                                <Components:LabelComboPair LabelText="PedCushion" LabelWidth="77" InputReadOnly="False" InputText="{Binding ColorSetInfo.PedCushionColor, Mode=TwoWay}"/>
                            </StackPanel>
                            <!--Column 3 : Materials-->
                            <StackPanel Width="415" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0 0 4 0">
                                <Components:LabelInputLookupPair LabelText="Fabric" InputLookupType="fab" LabelWidth="82" InputLookup="{Binding ColorSetInfo.Fabric1ID, Mode=TwoWay}" InputLookupChanged="LabelInputLookupPair_LookupInputChanged" LookupButtonPressed="LabelInputLookupPair_LookupButtonPressed"/>
                                <Components:LabelInputLookupPair LabelText="Wks Lam" InputLookupType="wks" LabelWidth="82" InputLookup="{Binding ColorSetInfo.WksLamID, Mode=TwoWay}" InputLookupChanged="LabelInputLookupPair_LookupInputChanged" LookupButtonPressed="LabelInputLookupPair_LookupButtonPressed"/>
                                <Components:LabelInputLookupPair LabelText="Wks Edge" InputLookupType="web" LabelWidth="82" InputLookup="{Binding ColorSetInfo.WksEdgeID, Mode=TwoWay}" InputLookupChanged="LabelInputLookupPair_LookupInputChanged" LookupButtonPressed="LabelInputLookupPair_LookupButtonPressed"/>
                                <Components:LabelInputLookupPair LabelText="Mel Pnl" InputLookupType="mel" LabelWidth="82" InputLookup="{Binding ColorSetInfo.MelPnlID, Mode=TwoWay}" InputLookupChanged="LabelInputLookupPair_LookupInputChanged" LookupButtonPressed="LabelInputLookupPair_LookupButtonPressed"/>
                                <Components:LabelInputLookupPair LabelText="Lam Pnl" InputLookupType="lam" LabelWidth="82" InputLookup="{Binding ColorSetInfo.LamPnlID, Mode=TwoWay}" InputLookupChanged="LabelInputLookupPair_LookupInputChanged" LookupButtonPressed="LabelInputLookupPair_LookupButtonPressed"/>
                                <Components:LabelInputLookupPair LabelText="Chase Door" InputLookupType="chs" LabelWidth="82" InputLookup="{Binding ColorSetInfo.ChaseDoorID, Mode=TwoWay}" InputLookupChanged="LabelInputLookupPair_LookupInputChanged" LookupButtonPressed="LabelInputLookupPair_LookupButtonPressed"/>
                                <Components:LabelInputLookupPair LabelText="Acrylic" InputLookupType="acr" LabelWidth="82" InputLookup="{Binding ColorSetInfo.AcrylicID, Mode=TwoWay}" InputLookupChanged="LabelInputLookupPair_LookupInputChanged" LookupButtonPressed="LabelInputLookupPair_LookupButtonPressed"/>
                                <Components:LabelInputLookupPair LabelText="Lam HC Door" InputLookupType="hcd" LabelWidth="82" InputLookup="{Binding ColorSetInfo.LamHCDoorID, Mode=TwoWay}" InputLookupChanged="LabelInputLookupPair_LookupInputChanged" LookupButtonPressed="LabelInputLookupPair_LookupButtonPressed"/>
                                <Components:LabelInputLookupPair LabelText="Lam Curve" InputLookupType="crv" LabelWidth="82" InputLookup="{Binding ColorSetInfo.LamCurveID, Mode=TwoWay}" InputLookupChanged="LabelInputLookupPair_LookupInputChanged" LookupButtonPressed="LabelInputLookupPair_LookupButtonPressed"/>
                            </StackPanel>
                            <!--Column 4 : Buttons-->
                            <StackPanel Width="Auto" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="20 0 4 0">
                                <Button x:Name="Btn_ExtProc_ImpMfg" Content="Mfg Import" Tag="IceMfgImp" Padding="4 2" Margin="0 1" FontSize="{Binding MainViewModel.FontSize_H4, FallbackValue=12}" Style="{StaticResource MaterialDesignPaperButton}" Click="Btn_ExtProc_ImpMfg_Click" />
                                <Button x:Name="Btn_ExtProc_EngPrc" Content="Eng Process" Tag="IceEngProc" Padding="4 2" Margin="0 1" FontSize="{Binding MainViewModel.FontSize_H4, FallbackValue=12}" Style="{StaticResource MaterialDesignPaperButton}" Click="Btn_ExtProc_EngPrc_Click" />
                                <Button x:Name="Btn_ExtProc_Matl" Content="Material Calc" Tag="IceMatlCalc" Padding="4 2" Margin="0 1" FontSize="{Binding MainViewModel.FontSize_H4, FallbackValue=12}" Style="{StaticResource MaterialDesignPaperButton}" Click="Btn_ExtProc_Matl_Click" />
                                <Button x:Name="Btn_ExtProc_Cutlst" Content="CNC Cutlist" Tag="CNC CutList" Padding="4 2" Margin="0 1" FontSize="{Binding MainViewModel.FontSize_H4, FallbackValue=12}" Style="{StaticResource MaterialDesignPaperButton}" Click="Btn_ExtProc_Cutlst_Click" />
                                <Button x:Name="Btn_ExtProc_SlExp" Content="Syteline Export" Tag="SyteLineExp" Padding="4 2" Margin="0 1" FontSize="{Binding MainViewModel.FontSize_H4, FallbackValue=12}" Style="{StaticResource MaterialDesignPaperButton}" Click="Btn_ExtProc_SlExp_Click" />
                            </StackPanel>
                        </StackPanel>
                        <Components:LabelInputPair Grid.Row="1" LabelText="Notes" LabelWidth="43" InputText="{Binding ColorSetInfo.Notes, Mode=TwoWay}" InputReadOnly="False"/>
                    </Grid>
                </TabItem>
                <TabItem Height="40" Width="100">
                    <TabItem.Header>
                        <TextBlock Width="Auto" FontWeight="Medium" FontSize="{Binding MainViewModel.FontSize_H3, FallbackValue=14}" Text="Colors+"/>
                    </TabItem.Header>
                    <Grid Height="270" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Top">
                            <!--Column 1 : Extra Materials-->
                            <StackPanel Width="280" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0 0 4 0">
                                <Components:LabelInputLookupPair LabelText="Acrylic 2" LabelWidth="80" InputLookup="{Binding ColorSetInfo.Acrylic2ID, Mode=TwoWay}" LookupButtonPressed="LabelInputLookupPair_LookupInputChanged"/>
                                <Components:LabelInputLookupPair LabelText="Fabric 2" LabelWidth="80" InputLookup="{Binding ColorSetInfo.Fabric2ID, Mode=TwoWay}" LookupButtonPressed="LabelInputLookupPair_LookupInputChanged"/>
                                <Components:LabelInputLookupPair LabelText="Fabric 3" LabelWidth="80" InputLookup="{Binding ColorSetInfo.Fabric3ID, Mode=TwoWay}" LookupButtonPressed="LabelInputLookupPair_LookupInputChanged"/>
                                <Components:LabelInputLookupPair LabelText="Wks Lam 2" LabelWidth="80" InputLookup="{Binding ColorSetInfo.WksLam2ID, Mode=TwoWay}" LookupButtonPressed="LabelInputLookupPair_LookupInputChanged"/>
                                <Components:LabelInputLookupPair LabelText="Lam Pnl 2" LabelWidth="80" InputLookup="{Binding ColorSetInfo.LamPnl2ID, Mode=TwoWay}" LookupButtonPressed="LabelInputLookupPair_LookupInputChanged"/>
                                <Components:LabelInputLookupPair LabelText="Mel Pnl 2" LabelWidth="80" InputLookup="{Binding ColorSetInfo.MelPnl2ID, Mode=TwoWay}" LookupButtonPressed="LabelInputLookupPair_LookupInputChanged"/>
                                <Components:LabelInputPair LabelText="Custom1" LabelWidth="80" InputText=""/>
                                <Components:LabelInputPair LabelText="Custom2" LabelWidth="80" InputText=""/>
                                <Components:LabelComboPair LabelText="UnderWsPnl" LabelWidth="80" InputText="{Binding ColorSetInfo.UnderWsPnlType, Mode=TwoWay}"/>
                            </StackPanel>
                            <!--Column 2 : Misc Toggles-->
                            <StackPanel Width="120" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0 0 4 0">
                                <Components:LabelCheckPair LabelText="Preengined" CheckValue="{Binding ColorSetInfo.Preengined, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Engined" CheckValue="{Binding ColorSetInfo.Engined, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="KeyAlike" CheckValue="{Binding ColorSetInfo.KeyAlike, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="KeyEaStaAlike" CheckValue="{Binding ColorSetInfo.KeyEaStaAlike, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="MasterKey" CheckValue="{Binding ColorSetInfo.MasterKey, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="EarlyElectrical" CheckValue="{Binding ColorSetInfo.EarlyElectrical, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="XQ" CheckValue="{Binding ColorSetInfo.XQ, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="UpdateRecord" CheckValue="{Binding ColorSetInfo.UpdateRecord, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="InstallByIC" CheckValue="{Binding ColorSetInfo.InstallByIC, Mode=TwoWay}"/>
                            </StackPanel>
                            <!--Column 3 : Misc Colors-->
                            <StackPanel Width="116" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0 0 4 0">
                                <Components:LabelComboPair LabelText="PmoldFin" LabelWidth="62" ItemSource="{Binding Finishes_Default}" InputText="{Binding ColorSetInfo.PmoldFin, Mode=TwoWay}"/>
                                <Components:LabelComboPair LabelText="AccFin" LabelWidth="62" ItemSource="{Binding Finishes_Default}" InputText="{Binding ColorSetInfo.AccFin, Mode=TwoWay}"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Height="40" Width="100">
                    <TabItem.Header>
                        <TextBlock Width="Auto" FontWeight="Medium" FontSize="{Binding MainViewModel.FontSize_H3, FallbackValue=14}" Text="Misc"/>
                    </TabItem.Header>
                    <Grid Height="270" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="240"/>
                            <ColumnDefinition Width="320"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Column="0" Margin="0 0 4 0">
                            <Components:LabelInputPair LabelWidth="90" LabelText="Name" InputText="{Binding ColorSetInfo.Name, Mode=TwoWay}"/>
                            <Components:LabelInputPair LabelWidth="90" LabelText="CompanyName" InputText="{Binding ColorSetInfo.CompanyName, Mode=TwoWay}"/>
                            <Components:LabelInputPair LabelWidth="90" LabelText="CompanyID" InputText="{Binding ColorSetInfo.CompanyID, Mode=TwoWay}"/>
                            <Components:LabelInputPair LabelWidth="90" LabelText="QuoteNbr" InputText="{Binding ColorSetInfo.QuoteNbr, Mode=TwoWay}"/>
                            <Components:LabelInputPair LabelWidth="90" LabelText="CustOrderID" InputText="{Binding ColorSetInfo.CustOrderID, Mode=TwoWay}"/>
                            <Components:LabelInputPair LabelWidth="90" LabelText="OrderType" InputText="{Binding ColorSetInfo.OrderType, Mode=TwoWay}"/>
                            <Components:LabelInputPair LabelWidth="90" LabelText="OpportunityNbr" InputText="{Binding ColorSetInfo.OpportunityNbr, Mode=TwoWay}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="0 0 4 0">
                            <Components:LabelInputPair LabelWidth="70" LabelText="DropShipID" InputText="{Binding ColorSetInfo.DropShipID, Mode=TwoWay}" InputReadOnly="True"/>
                            <Components:LabelInputPair LabelWidth="70" LabelText="ExterpriseID" InputText="{Binding ColorSetInfo.EnterpriseID, Mode=TwoWay}"/>
                            <Components:LabelInputPair LabelWidth="70" LabelText="ShiptoName" InputText="{Binding ColorSetInfo.ShiptoName, Mode=TwoWay}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Components:LabelDatePickPair Grid.Column="0" Grid.Row="0" LabelWidth="70" LabelText="OrderDate" InputReadOnly="True" SelectedDate="{Binding ColorSetInfo.OrderDate, Mode=TwoWay}" InputText=""/>
                                <Components:LabelDatePickPair Grid.Column="0" Grid.Row="1" LabelWidth="70" LabelText="OnSiteDate" InputReadOnly="True" SelectedDate="{Binding ColorSetInfo.OnSiteDate, Mode=TwoWay}"/>
                                <Components:LabelDatePickPair Grid.Column="1" Grid.Row="0" LabelWidth="70" LabelText="CreationDate" InputReadOnly="True" SelectedDate="{Binding ColorSetInfo.CreationDate, Mode=TwoWay}"/>
                                <Components:LabelDatePickPair Grid.Column="1" Grid.Row="1" LabelWidth="70" LabelText="ChangeDate" InputReadOnly="True" SelectedDate="{Binding ColorSetInfo.ChangeDate, Mode=TwoWay}"/>
                            </Grid>
                            <Components:LabelInputPair Grid.Column="1" Grid.Row="5" LabelWidth="70"
                                                   LabelText="ColorSetID"
                                                   InputText="{Binding ColorSetInfo.ColorSetID, Mode=OneWay}" InputReadOnly="True"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Height="40" Width="100">
                    <TabItem.Header>
                        <TextBlock Width="Auto" FontWeight="Medium" FontSize="{Binding MainViewModel.FontSize_H3, FallbackValue=14}" Text="Quote Parts"/>
                    </TabItem.Header>
                    <Grid Height="270" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" VerticalAlignment="Top" Orientation="Horizontal">
                            <!--Column 1-->
                            <StackPanel Height="Auto" Width="Auto" Margin="0 0 4 0">
                                <Components:LabelCheckPair LabelText="Part 01" CheckValue="{Binding ColorSetInfo.Part01, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 02" CheckValue="{Binding ColorSetInfo.Part02, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 03" CheckValue="{Binding ColorSetInfo.Part03, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 04" CheckValue="{Binding ColorSetInfo.Part04, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 05" CheckValue="{Binding ColorSetInfo.Part05, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 06" CheckValue="{Binding ColorSetInfo.Part06, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 07" CheckValue="{Binding ColorSetInfo.Part07, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 08" CheckValue="{Binding ColorSetInfo.Part08, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 09" CheckValue="{Binding ColorSetInfo.Part09, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 10" CheckValue="{Binding ColorSetInfo.Part10, Mode=TwoWay}"/>
                            </StackPanel>
                            <!--Column 2-->
                            <StackPanel Height="Auto" Width="Auto" Margin="0 0 4 0">
                                <Components:LabelCheckPair LabelText="Part 11" CheckValue="{Binding ColorSetInfo.Part11, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 12" CheckValue="{Binding ColorSetInfo.Part12, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 13" CheckValue="{Binding ColorSetInfo.Part13, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 14" CheckValue="{Binding ColorSetInfo.Part14, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 15" CheckValue="{Binding ColorSetInfo.Part15, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 16" CheckValue="{Binding ColorSetInfo.Part16, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 17" CheckValue="{Binding ColorSetInfo.Part17, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 18" CheckValue="{Binding ColorSetInfo.Part18, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 19" CheckValue="{Binding ColorSetInfo.Part19, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 20" CheckValue="{Binding ColorSetInfo.Part20, Mode=TwoWay}"/>
                            </StackPanel>
                            <!--Column 3-->
                            <StackPanel Height="Auto" Width="Auto" Margin="0 0 4 0">
                                <Components:LabelCheckPair LabelText="Part 21" CheckValue="{Binding ColorSetInfo.Part21, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 22" CheckValue="{Binding ColorSetInfo.Part22, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 23" CheckValue="{Binding ColorSetInfo.Part23, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 24" CheckValue="{Binding ColorSetInfo.Part24, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 25" CheckValue="{Binding ColorSetInfo.Part25, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 26" CheckValue="{Binding ColorSetInfo.Part26, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 27" CheckValue="{Binding ColorSetInfo.Part27, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 28" CheckValue="{Binding ColorSetInfo.Part28, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 29" CheckValue="{Binding ColorSetInfo.Part29, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 30" CheckValue="{Binding ColorSetInfo.Part30, Mode=TwoWay}"/>
                            </StackPanel>
                            <!--Column 4-->
                            <StackPanel Height="Auto" Width="Auto" Margin="0 0 4 0">
                                <Components:LabelCheckPair LabelText="Part 31" CheckValue="{Binding ColorSetInfo.Part31, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 32" CheckValue="{Binding ColorSetInfo.Part32, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 33" CheckValue="{Binding ColorSetInfo.Part33, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 34" CheckValue="{Binding ColorSetInfo.Part34, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 35" CheckValue="{Binding ColorSetInfo.Part35, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 36" CheckValue="{Binding ColorSetInfo.Part36, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 37" CheckValue="{Binding ColorSetInfo.Part37, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 38" CheckValue="{Binding ColorSetInfo.Part38, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 39" CheckValue="{Binding ColorSetInfo.Part39, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 40" CheckValue="{Binding ColorSetInfo.Part40, Mode=TwoWay}"/>
                            </StackPanel>
                            <!--Column 5-->
                            <StackPanel Height="Auto" Width="Auto" Margin="0 0 4 0">
                                <Components:LabelCheckPair LabelText="Part 41" CheckValue="{Binding ColorSetInfo.Part41, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 42" CheckValue="{Binding ColorSetInfo.Part42, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 43" CheckValue="{Binding ColorSetInfo.Part43, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 44" CheckValue="{Binding ColorSetInfo.Part44, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 45" CheckValue="{Binding ColorSetInfo.Part45, Mode=TwoWay}"/>
                                <Components:LabelCheckPair LabelText="Part 46" CheckValue="{Binding ColorSetInfo.Part46, Mode=TwoWay}"/>
