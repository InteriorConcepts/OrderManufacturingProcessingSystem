<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Style x:Key="DataGrid_QuickAction" TargetType="DataGrid" BasedOn="{StaticResource {x:Type DataGridRow}}">
        <Setter Property="RowStyle">
            <Setter.Value>
                <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                    <Setter Property="Height" Value="{Binding MainViewModel.FontSize_H2, ElementName=Page_Home, FallbackValue=16}"/>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="CellStyle">
            <Setter.Value>
                <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                    <Setter Property="Padding" Value="16 0"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="{Binding MainViewModel.FontSize_H4, ElementName=Page_Home, FallbackValue=12}"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="BorderThickness" Value="0"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="QuickActionButton" TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignFlatButton}">
        <Setter Property="Foreground" Value="#ccc"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="1"/>
        <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="20"/>
        <Setter Property="Height" Value="{Binding ElementName=Page_Home, Path=MainViewModel.FontSize_H2}"/>
        <Setter Property="Width" Value="{Binding ElementName=Page_Home, Path=MainViewModel.FontSize_H2}"/>
    </Style>
    <Style x:Key="QuickActionButton_Icon" TargetType="materialDesign:PackIcon">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Height" Value="{Binding ElementName=Page_Home, Path=MainViewModel.FontSize_H2_2, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
        <Setter Property="Width" Value="{Binding ElementName=Page_Home, Path=MainViewModel.FontSize_H2_2, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
    </Style>
</ResourceDictionary>