<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="DataGrid_SidePnl_GridColumnHeaderStyle" TargetType="{x:Type DataGridColumnHeader}">
        <Setter Property="Background" Value="#333"/>
        <Setter Property="Foreground" Value="#EEE"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="LayoutTransform">
            <Setter.Value>
                <TransformGroup>
                    <RotateTransform Angle="-90"/>
                    <ScaleTransform ScaleX="1" ScaleY="-1" />
                </TransformGroup>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="DataGrid_SidePnl_GridRowHeaderStyle" TargetType="DataGridRowHeader">
        <Setter Property="Background" Value="#333"/>
        <Setter Property="Foreground" Value="#EEE"/>
    </Style>
    
    <Style x:Key="DataGrid_SidePnl_GridRowStyle" TargetType="DataGridRow">
    </Style>
    
    <Style x:Key="DataGrid_SidePnl_GridCellStyle" TargetType="{x:Type DataGridCell}">
        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DataGridCell}">
                    <Border Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                        <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="LayoutTransform">
            <Setter.Value>
                <TransformGroup>
                    <RotateTransform Angle="-90"/>
                    <ScaleTransform ScaleX="1" ScaleY="-1" />
                </TransformGroup>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DataGrid_SidePnl_Style" TargetType="{x:Type DataGrid}">
        <Setter Property="ColumnHeaderStyle" Value="{StaticResource DataGrid_SidePnl_GridColumnHeaderStyle}"/>
        <Setter Property="RowHeaderStyle" Value="{StaticResource DataGrid_SidePnl_GridRowHeaderStyle}"/>
        <Setter Property="RowStyle" Value="{StaticResource DataGrid_SidePnl_GridRowStyle}"/>
        <Setter Property="CellStyle" Value="{StaticResource DataGrid_SidePnl_GridCellStyle}"/>
        <Setter Property="LayoutTransform">
            <Setter.Value>
                <TransformGroup>
                    <RotateTransform Angle="90"/>
                    <MatrixTransform Matrix="-1,0,0,1,0,0"/>
                </TransformGroup>
            </Setter.Value>
        </Setter>
        <Setter Property="EnableRowVirtualization" Value="False"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="CanUserAddRows" Value="False"/>
        <Setter Property="CanUserDeleteRows" Value="False"/>
        <Setter Property="CanUserSortColumns" Value="False"/>
        <Setter Property="IsReadOnly" Value="False"/>
        <Setter Property="CanUserResizeColumns" Value="False"/>
        <Setter Property="CanUserResizeRows" Value="False"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Hidden"/>
        <Setter Property="HorizontalScrollBarVisibility" Value="Hidden"/>
        <Setter Property="ItemsSource" Value="{Binding SelectedItems, ElementName=datagrid_main, UpdateSourceTrigger=PropertyChanged}"/>
        <Setter Property="Background" Value="#FF131313"/>
        <Setter Property="Foreground" Value="#FFEFEFEF"/>
        <Setter Property="RowBackground" Value="#FF121212"/>
        <Setter Property="AlternatingRowBackground" Value="#FF191919"/>
        <Setter Property="HorizontalGridLinesBrush" Value="#FF2B2B2B"/>
        <Setter Property="VerticalGridLinesBrush" Value="#FF171717"/>
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="SelectionUnit" Value="Cell"/>
        <Setter Property="BorderThickness" Value="2,1,1,1"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>
    
</ResourceDictionary>