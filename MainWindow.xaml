<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OMPS"
        xmlns:Components="clr-namespace:OMPS.Components"
        xmlns:pages="clr-namespace:OMPS.Pages"
        xmlns:viewModel="clr-namespace:OMPS.viewModel"
        xmlns:Ext="clr-namespace:OMPS"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        x:Name="MainWin" x:Class="OMPS.MainWindow" VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.VirtualizationMode="Recycling"
        mc:Ignorable="d" UseLayoutRounding="False"
        Title="MainWindow" MinHeight="600" MinWidth="1025" Background="#111"
        Style="{StaticResource MaterialDesignWindow}" WindowStyle="None" ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterScreen">
    <Window.CacheMode>
        <BitmapCache RenderAtScale="2" EnableClearType="True" SnapsToDevicePixels="True"/>
    </Window.CacheMode>
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" NonClientFrameEdges="Bottom" ResizeBorderThickness="4"/>
    </WindowChrome.WindowChrome>
    
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo>
            <TaskbarItemInfo.Overlay>
                <DrawingImage>/Images/Interior-Concepts-Logo.png</DrawingImage>
            </TaskbarItemInfo.Overlay>
        </TaskbarItemInfo>
    </Window.TaskbarItemInfo>
    <Window.FocusVisualStyle>
        <Style/>
    </Window.FocusVisualStyle>
    <!--
    <Window.DataContext>
        <viewModel:Main_ViewModel/>
    </Window.DataContext>
    -->
    <Grid x:Name="Grid_Main" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <materialDesign:ColorZone Grid.Row="0" Padding="4 4 4 0" Background="#111" Foreground="#EEE">
            <Grid x:Name="grid_TopBar" DataContext="{Binding ElementName=MainWin}" MouseDown="grid_TopBar_MouseDown" Background="Transparent" IsHitTestVisible="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="24"/>
                    <RowDefinition Height="12"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                            Orientation="Horizontal" HorizontalAlignment="Stretch"
                            VerticalAlignment="Center">
                    <Button x:Name="Btn_Home" Height="24" Width="24"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
                            Margin="4 0 0 0" Padding="3 3"
                            VerticalAlignment="Center" HorizontalAlignment="Stretch"
                            Click="Btn_Home_Click">
                        <materialDesign:PackIcon Height="22" Width="22" Kind="Home"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                    <Button x:Name="Btn_Back" Height="24" Width="24"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
                            Margin="4 0 0 0" Padding="3 3"
                            IsEnabled="{Binding DataContext.CanPrevious, ElementName=MainWin, UpdateSourceTrigger=PropertyChanged}"
                            VerticalAlignment="Center" HorizontalAlignment="Stretch"
                            Click="Btn_Back_Click"
                            MouseEnter="Btn_Back_MouseEnter" MouseLeave="Btn_Back_MouseLeave">
                        <materialDesign:PackIcon Height="22" Width="22" Kind="SwapHorizontalBold"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                    <Button x:Name="Btn_Settings" Height="24" Width="24"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
                            Margin="4 0 0 0" Padding="3 3"
                            VerticalAlignment="Center" HorizontalAlignment="Stretch"
                            Click="Btn_Settings_Click">
                        <materialDesign:PackIcon Height="20" Width="22" Kind="ApplicationCogOutline"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="Bridge" Foreground="DodgerBlue" Height="24" Width="24" VerticalAlignment="Center"/>
                    <Label FontSize="20" VerticalAlignment="Stretch" VerticalContentAlignment="Center" Padding="4 0" HorizontalAlignment="Center" Content="Production Bridge"/>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="4" Grid.RowSpan="2" Margin="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button x:Name="Btn_WinMin" Click="Btn_WinMin_Click" Style="{StaticResource MaterialDesignFlatButton}" Foreground="{DynamicResource MaterialDesign.Brush.Foreground}" Margin="4 0 0 0" Padding="3 0" Width="24" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                        <materialDesign:PackIcon Kind="WindowMinimize" Width="22" Height="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                    <Button x:Name="Btn_WinMax" Click="Btn_WinMax_Click" Style="{StaticResource MaterialDesignFlatButton}" Foreground="{DynamicResource MaterialDesign.Brush.Foreground}" Margin="4 0 0 0" Padding="3 0" Width="24" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                        <materialDesign:PackIcon Kind="WindowMaximize" Width="22" Height="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                    <Button x:Name="Btn_WinClose" Click="Btn_WinClose_Click" Style="{StaticResource MaterialDesignFlatButton}" Foreground="#A33" Margin="4 0 0 0" Padding="3 0" Width="24" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                        <materialDesign:PackIcon Kind="Close" Width="22" Height="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button>
                </StackPanel>
                <TextBox x:Name="Txt_Url" Grid.Row="1" Background="#232323" FontSize="8" VerticalAlignment="Top" Foreground="#BBB" Grid.Column="2" Text="pbridge://order-search" TextAlignment="Center" Padding="10 0"/>
            </Grid>
        </materialDesign:ColorZone>
        <Separator Grid.Row="1" VerticalAlignment="Top"/>
        <!--
        <Grid Grid.Row="0">
            <materialDesign:PackIcon Height="Auto" VerticalAlignment="Stretch" VerticalContentAlignment="Center" Kind="HomeOutline"/>
        </Grid>
        -->
        <materialDesign:ColorZone Grid.Row="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="#292929" Margin="0">
            <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" x:Name="Spnl_FrameTabs" Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <RadioButton x:Name="TabBtn_Landing" Style="{DynamicResource MaterialDesignTabRadioButtonBottom}"
                                 Content="Landing" Tag="{x:Static local:PageTypes.OrderSearch}" Padding="6 0"
                                 Height="21" IsChecked="False" IsEnabled="False"
                                 FontSize="{Binding ElementName=MainWin, Path=MainViewModel.FontSize_DataGrid, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"/>
                    <RadioButton x:Name="TabBtn_OrderSearch" Style="{DynamicResource MaterialDesignTabRadioButtonBottom}"
                                 Content="Order Search" Tag="{x:Static local:PageTypes.OrderSearch}" Padding="6 0"
                                 Height="21" IsChecked="{Binding OrderSearch_IsSelected, Mode=OneWay}"
                                 Checked="RadioButton_Checked" IsEnabled="{Binding OrderSearch_IsEnabled, Mode=OneWay}"
                                 FontSize="{Binding ElementName=MainWin, Path=MainViewModel.FontSize_DataGrid, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"/>
                    <RadioButton x:Name="TabBtn_LineItemInfo" Style="{DynamicResource MaterialDesignTabRadioButtonBottom}"
                                 Content="LineItem Info" Tag="{x:Static local:PageTypes.EngOrder}" Padding="6 0"
                                 Height="21" IsChecked="{Binding EngOrder_IsSelected, Mode=OneWay}"
                                 Checked="RadioButton_Checked" IsEnabled="{Binding EngOrder_IsEnabled, Mode=OneWay}"
                                 FontSize="{Binding ElementName=MainWin, Path=MainViewModel.FontSize_DataGrid, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"/>
                    <RadioButton x:Name="TabBtn_QuoteOrder" Style="{DynamicResource MaterialDesignTabRadioButtonBottom}"
                                 Content="Quote Order" Tag="{x:Static local:PageTypes.QuoteOrder}" Padding="6 0"
                                 Height="21" IsChecked="{Binding QuoteOrder_IsSelected, Mode=OneWay}"
                                 Checked="RadioButton_Checked" IsEnabled="{Binding QuoteOrder_IsEnabled, Mode=OneWay}"
                                 FontSize="{Binding ElementName=MainWin, Path=MainViewModel.FontSize_DataGrid, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"/>
                </StackPanel>
                <ContentControl Grid.Row="1" x:Name="Spnl_ContentFrames" Content="{Binding Current}"/>
            </Grid>
        </materialDesign:ColorZone>

        <materialDesign:ColorZone Grid.Row="3" Mode="Dark" Background="#111" Foreground="#CCC" Margin="0" Visibility="Visible">
            <Grid x:Name="statusbar" Height="32" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Separator Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Top"/>
                <StackPanel Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Stretch" Orientation="Horizontal" Margin="5 0 0 0">
                    <Image x:Name="Img_NetworkStatus" Margin="3" SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="HighQuality"
                       RenderOptions.EdgeMode="Aliased" RenderSize="32,32"
                       Source="pack://application:,,,/OMPS;component/Images/Network.png"/>
                    <Label Content="Online"
                       VerticalAlignment="Center" VerticalContentAlignment="Center" FontSize="14" Padding="0,0,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Stretch" Orientation="Horizontal" Margin="0 0 5 0">
                    <Label x:Name="Lbl_Date" Content="Monday, September 22, 2025"  FontSize="14" VerticalContentAlignment="Center" Panel.ZIndex="9999" HorizontalContentAlignment="Center" Margin="0,0,10,0" Padding="0,0,0,0"/>
                    <Label x:Name="Lbl_Time" Content="11:42:15" FontSize="14" VerticalContentAlignment="Center" Panel.ZIndex="9999" HorizontalContentAlignment="Center" Padding="0,0,0,0"/>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>
    </Grid>

</Window>
