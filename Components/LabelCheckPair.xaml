<UserControl x:Class="OMPS.Components.LabelCheckPair"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OMPS.Components"
             mc:Ignorable="d" 
             x:Name="Root"
            d:DesignHeight="22" d:DesignWidth="100" Padding="1 2 1 2" Height="22">
    <DockPanel LastChildFill="True" HorizontalAlignment="Stretch" DataContext="{Binding ElementName=Root}">
        <CheckBox Content="{Binding LabelText}" Foreground="{Binding ElementName=Root, Path=Foreground}" ContentStringFormat="{} {0}" Padding="0" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="11"/>
    </DockPanel>
</UserControl>
