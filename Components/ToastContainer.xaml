<UserControl x:Class="OMPS.Components.ToastContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OMPS.Components"
             mc:Ignorable="d" Height="300" Opacity="1" Padding="0" Margin="0"
             d:DesignHeight="300" d:DesignWidth="800">
    <StackPanel x:Name="SPnl_Toasts" VerticalAlignment="Bottom" HorizontalAlignment="Stretch">
        <StackPanel.Effect>
            <DropShadowEffect BlurRadius="32" ShadowDepth="4" Direction="-90" Opacity="0.5"/>
        </StackPanel.Effect>
    </StackPanel>
</UserControl>
