<UserControl x:Class="OMPS.Components.LabelInputPair"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OMPS.Components"
             mc:Ignorable="d" 
             x:Name="Root"
             d:DesignHeight="22" d:DesignWidth="100" Padding="1 2 1 2" Height="22" Background="Transparent">
        <DockPanel LastChildFill="True" HorizontalAlignment="Stretch" DataContext="{Binding ElementName=Root}">
        <Label Foreground="{Binding ElementName=Root, Path=Foreground}" Content="{Binding LabelText}" ContentStringFormat="{}{0}:" VerticalContentAlignment="Center" Width="{Binding LabelWidth}" HorizontalContentAlignment="Right" Padding="0 0 5 0" FontSize="11"/>
        <TextBox Text="{Binding Path=InputText, StringFormat=InputFormat}" VerticalContentAlignment="Center" IsReadOnly="{Binding InputReadOnly}" Padding="0" TextWrapping="NoWrap" HorizontalAlignment="Stretch" FontSize="11"/>
    </DockPanel>
</UserControl>
